rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    function isValidTimestamp(field) {
      return field is timestamp;
    }

    // Venues collection - public read, admin write
    match /venues/{venueId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // Nested dishes subcollection (if used)
      match /dishes/{dishId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }

    // Dishes collection - public read, admin write
    match /dishes/{dishId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Products collection - public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Promotions collection - public read for active, admin write
    match /promotions/{promoId} {
      allow read: if resource.data.active == true || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    // Chains collection - public read, admin write
    match /chains/{chainId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Change logs - admin only
    match /change_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin() || isAuthenticated();
      allow update, delete: if isAdmin();
    }

    // Scraper runs - admin only
    match /scraper_runs/{runId} {
      allow read, write: if isAdmin();
    }

    // Rate limits - system only (managed by Cloud Functions)
    match /rate_limits/{limitId} {
      allow read, write: if false;
    }

    // User profiles (if needed for admin users)
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    // Analytics/metrics - admin only
    match /analytics/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
