    .cook-meta-item strong {
        display: block;
        font-family: 'VC Henrietta', serif;
        font-size: 1.25rem;
        color: var(--planted-purple);
    }

    .cook-meta-item span {
        font-size: 0.75rem;
        color: var(--planted-black);
        opacity: 0.6;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

