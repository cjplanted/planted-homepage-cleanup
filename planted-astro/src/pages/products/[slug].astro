        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .pill:hover {
        transform: translateY(-4px);
        box-shadow:
            0 4px 8px rgba(0,0,0,0.06),
            0 12px 24px rgba(97,38,158,0.12);
        border-color: rgba(97,38,158,0.15);
    }

    .pill-percent {
        font-size: 0.75rem;
        color: var(--planted-green);
        font-weight: 700;
        opacity: 0.8;
    }

    .ingredient-sticker {
        display: inline-block;
        background: linear-gradient(135deg, #6BBF59 0%, #5BAF49 100%);
        color: var(--planted-black);
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        font-weight: 600;
        transform: rotate(-2deg);
        box-shadow:
            0 4px 12px rgba(107,191,89,0.3),
            0 1px 0 rgba(255,255,255,0.2) inset;
        position: relative;
    }

    .ingredient-sticker::before {
        content: '';
        position: absolute;
        top: 4px;
        right: 8px;
        width: 12px;
        height: 12px;
        background: linear-gradient(135deg, transparent 50%, rgba(0,0,0,0.1) 50%);
        transform: rotate(45deg);
    }

    .ingredient-sticker strong {
        color: white;
    }

    /* ==================== NUTRITION ==================== */
    .nutrition {
        background: var(--planted-cream);
        overflow: hidden;
    }

    .nutrition-layout {
        display: grid;
        grid-template-columns: 1fr;
        min-height: 500px;
    }

    @media (min-width: 768px) {
        .nutrition-layout {
            grid-template-columns: 1fr 1fr;
        }
    }

    .nutrition-image {
        position: relative;
        min-height: 350px;
        overflow: hidden;
    }

    .nutrition-image img {
        position: absolute;
        inset: -10%;
        width: 120%;
        height: 120%;
        object-fit: cover;
        filter: contrast(1.02) saturate(1.05);
        transition: transform 0.8s ease;
    }

    .nutrition-image:hover img {
        transform: scale(1.03);
    }

    .nutrition-image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent 60%, var(--planted-cream) 100%);
    }

    @media (max-width: 767px) {
        .nutrition-image-overlay {
            background: linear-gradient(180deg, transparent 60%, var(--planted-cream) 100%);
        }
    }

    .nutrition-content {
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    @media (min-width: 768px) {
        .nutrition-content {
            padding: 4rem 3rem;
            max-width: 500px;
        }
    }

    .nutrition-highlights {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        margin-bottom: 2rem;
    }

    @media (min-width: 480px) {
        .nutrition-highlights {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .nutrient-card {
        background: white;
        border-radius: 1rem;
        padding: 1.25rem 1rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0,0,0,0.04);
        border: 1px solid transparent;
        transition: all 0.3s ease;
    }

    .nutrient-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        border-color: rgba(107,191,89,0.2);
    }

    .nutrient-icon {
        width: 32px;
        height: 32px;
        margin: 0 auto 0.5rem;
        color: var(--planted-purple);
    }

    .nutrient-icon svg {
        width: 100%;
        height: 100%;
    }

    .nutrient-value {
        font-family: 'VC Henrietta', serif;
        font-size: 1.25rem;
        color: var(--planted-green);
        display: block;
        font-weight: 700;
    }

    .nutrient-label {
        font-size: 0.65rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--planted-black);
        opacity: 0.6;
    }

    .nutrient-bar {
        height: 3px;
        background: rgba(0,0,0,0.08);
        border-radius: 2px;
        margin-top: 0.75rem;
        overflow: hidden;
    }

    .nutrient-bar-fill {
        height: 100%;
        width: 0;
        background: var(--planted-green);
        border-radius: 2px;
        transition: width 1s ease;
    }

    .nutrient-bar-fill.animated {
        width: var(--width);
    }

    .nutrition-table-wrapper {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.04);
    }

    .nutrition-toggle {
        width: 100%;
        padding: 1rem 1.25rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: none;
        border: none;
        cursor: pointer;
        font-weight: 600;
        color: var(--planted-purple);
        font-size: 0.9rem;
        transition: background 0.2s ease;
    }

    .nutrition-toggle:hover {
        background: rgba(0,0,0,0.02);
    }

    .nutrition-toggle svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .nutrition-toggle.open svg {
        transform: rotate(180deg);
    }

    .nutrition-table {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
    }

    .nutrition-table.open {
        max-height: 500px;
    }

    .nutrition-table table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.85rem;
        padding: 0 1.25rem;
    }

    .nutrition-table th {
        text-align: left;
        padding: 0.5rem 1.25rem;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--planted-purple);
        opacity: 0.5;
    }

    .nutrition-table td {
        padding: 0.6rem 1.25rem;
        border-bottom: 1px solid rgba(0,0,0,0.04);
        transition: background 0.2s ease;
    }

    .nutrition-table tr:hover td {
        background: rgba(97,38,158,0.02);
    }

    .nutrition-table td:last-child {
        text-align: right;
        font-weight: 600;
        color: var(--planted-purple);
    }

    .nutrition-table tr.indent td:first-child {
        padding-left: 2rem;
        font-size: 0.8rem;
        opacity: 0.6;
    }

    .nutrition-table tr.highlight {
        position: relative;
    }

    .nutrition-table tr.highlight td {
        background: rgba(107,191,89,0.08);
        font-weight: 600;
    }

    .nutrition-table tr.highlight td:first-child::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 60%;
        background: var(--planted-green);
        border-radius: 0 2px 2px 0;
    }

    .nutrition-table tr.highlight td:last-child {
        color: var(--planted-green);
    }

    .nutrition-note {
        padding: 0.75rem 1.25rem;
        font-size: 0.7rem;
        color: var(--planted-black);
        opacity: 0.4;
    }

