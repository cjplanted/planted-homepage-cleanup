        font-size: 1rem;
        line-height: 1.7;
        color: var(--planted-black);
        opacity: 0.8;
        margin-bottom: 1.5rem;
    }

    .product-weight {
        display: inline-flex;
        gap: 0.5rem;
        background: var(--planted-cream);
        padding: 0.75rem 1.25rem;
        border-radius: 100px;
        margin-bottom: 1.5rem;
    }

    .weight-label {
        font-size: 0.85rem;
        color: var(--planted-black);
        opacity: 0.6;
    }

    .weight-value {
        font-size: 0.85rem;
        font-weight: 700;
        color: var(--planted-black);
    }

    .product-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .feature-tag {
        background: rgba(97, 38, 158, 0.1);
        color: var(--planted-purple);
        padding: 0.5rem 1rem;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    /* Product Details Grid */
    .product-details-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        padding: 0 1.5rem 4rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    @media (min-width: 768px) {
        .product-details-grid {
            grid-template-columns: repeat(2, 1fr);
            padding: 0 3rem 4rem;
        }
    }

    @media (min-width: 1024px) {
        .product-details-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .detail-card {
        background: var(--planted-cream);
        border-radius: 1.5rem;
        padding: 1.5rem;
    }

    .detail-icon {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .detail-card h3 {
        font-size: 1rem;
        font-weight: 700;
        color: var(--planted-black);
        margin-bottom: 0.5rem;
    }

    .detail-card p {
        font-size: 0.9rem;
        line-height: 1.6;
        color: var(--planted-black);
        opacity: 0.7;
    }

    /* Find Section */
    .find-section {
        background: var(--planted-purple);
        padding: 4rem 1.5rem;
        text-align: center;
        color: white;
    }

    .find-section h2 {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(1.5rem, 4vw, 2rem);
        margin-bottom: 0.5rem;
    }

    .find-section p {
        opacity: 0.8;
        margin-bottom: 1.5rem;
    }

    .find-section .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    /* Related Products */
    .related-products {
        padding: 4rem 1.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .related-products h2 {
        font-family: 'VC Henrietta', serif;
        font-size: 1.5rem;
        color: var(--planted-purple);
        margin-bottom: 2rem;
        text-transform: capitalize;
    }

    .related-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .related-card {
        text-decoration: none;
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .related-card:hover {
        transform: translateY(-4px);
    }

    .related-image {
        aspect-ratio: 1;
        padding: 1rem;
        border-radius: 1rem;
    }

    .related-card[data-color="yellow"] .related-image { background: linear-gradient(135deg, #F5E6B8 0%, #E8D494 100%); }
    .related-card[data-color="terracotta"] .related-image { background: linear-gradient(135deg, #E8C4B8 0%, #D4A894 100%); }
    .related-card[data-color="purple"] .related-image { background: linear-gradient(135deg, #C4B8E8 0%, #A894D4 100%); }
    .related-card[data-color="olive"] .related-image { background: linear-gradient(135deg, #C8D4B8 0%, #B4C494 100%); }
    .related-card[data-color="burgundy"] .related-image { background: linear-gradient(135deg, #D4B8C4 0%, #C494A8 100%); }
    .related-card[data-color="coral"] .related-image { background: linear-gradient(135deg, #F5D4C8 0%, #E8B8A4 100%); }
    .related-card[data-color="green"] .related-image { background: linear-gradient(135deg, #C4E8C4 0%, #94D494 100%); }
    .related-card[data-color="orange"] .related-image { background: linear-gradient(135deg, #F5D4B8 0%, #E8B894 100%); }
    .related-card[data-color="red"] .related-image { background: linear-gradient(135deg, #F5C4C4 0%, #E8A4A4 100%); }

    .related-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .related-info {
        padding: 1rem 0.5rem;
    }

    .related-name {
        font-weight: 700;
        color: var(--planted-black);
        font-size: 0.9rem;
    }

    .related-variant {
        color: var(--planted-black);
        opacity: 0.6;
        font-size: 0.85rem;
    }

    /* Recipe Section */
