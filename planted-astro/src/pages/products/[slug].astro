        text-shadow: 0 0 40px rgba(107,191,89,0.6);
        -webkit-text-fill-color: var(--planted-green);
    }

    .hero-protein-label {
        display: block;
        color: rgba(255,255,255,0.9);
        font-size: clamp(0.7rem, 1.5vw, 1rem);
        text-transform: uppercase;
        letter-spacing: 0.15em;
        font-weight: 600;
        margin-top: 0.5rem;
    }

    /* Product info - bottom left */
    .hero-info {
        position: absolute;
        bottom: 8%;
        left: 5%;
        z-index: 20;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease 0.1s, transform 0.6s var(--transition-slow) 0.1s;
    }

    .hero-info.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .product-title {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2rem, 6vw, 4rem);
        color: white;
        line-height: 0.95;
        letter-spacing: -0.02em;
        margin-bottom: 0.25rem;
    }

    .product-variant {
        font-size: clamp(1rem, 2vw, 1.4rem);
        color: rgba(255,255,255,0.8);
        font-style: italic;
    }

    /* Scroll hint */
    .scroll-hint {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 30;
        color: rgba(255,255,255,0.7);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        transition: opacity 0.4s ease;
    }

    .scroll-line {
        width: 1px;
        height: 40px;
        background: linear-gradient(to bottom, rgba(255,255,255,0.6), transparent);
        animation: scrollPulse 2s ease-in-out infinite;
    }

    @keyframes scrollPulse {
        0%, 100% { transform: scaleY(1); opacity: 0.6; }
        50% { transform: scaleY(1.3); opacity: 1; }
    }

    .scroll-hint.hidden {
        opacity: 0;
        pointer-events: none;
    }

    /* ==================== STATS BAR ==================== */
    .stats {
        background: var(--planted-purple);
        padding: 2rem 1.5rem;
        position: relative;
        overflow: hidden;
    }

    .stats::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.03), transparent);
        animation: statsShimmer 3s ease infinite;
    }

    @keyframes statsShimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }

    .stats-grid {
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        flex-wrap: wrap;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
    }

    .stat {
        text-align: center;
        color: white;
        min-width: 80px;
        padding: 1rem;
        border-radius: 1rem;
        transition: transform 0.3s ease, background 0.3s ease;
        cursor: default;
        opacity: 0;
        transform: translateY(20px);
    }

    .stat.animated {
        opacity: 1;
        transform: translateY(0);
        transition: opacity 0.6s ease, transform 0.6s var(--transition-slow);
        transition-delay: calc(var(--delay) * 0.1s);
    }

    .stat:hover {
        background: rgba(255,255,255,0.1);
        transform: translateY(-4px);
    }

    .stat-icon {
        display: block;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        filter: grayscale(0.2);
    }

    .stat-value {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2rem, 6vw, 2.75rem);
        color: var(--planted-green);
        display: inline;
        line-height: 1;
        font-variant-numeric: tabular-nums;
        letter-spacing: -0.03em;
    }

    .stat-unit {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(1rem, 3vw, 1.25rem);
        color: var(--planted-green);
    }

    .stat-label {
        display: block;
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        opacity: 0.7;
        margin-top: 0.35rem;
    }

    .stat.zero .stat-value {
        color: white;
    }

    .stat-celebration {
        position: absolute;
        top: -0.5rem;
        right: -0.5rem;
        font-size: 0.8rem;
        animation: celebrateBounce 1s ease infinite;
    }

    @keyframes celebrateBounce {
        0%, 100% { transform: scale(1) rotate(0deg); }
        50% { transform: scale(1.2) rotate(10deg); }
    }

    /* ==================== TRUST BADGES ==================== */
    .trust {
        background: var(--planted-cream);
        padding: 1.5rem;
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--planted-purple);
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        background: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .trust-badge:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(97,38,158,0.1);
    }

    .trust-badge svg {
        width: 20px;
        height: 20px;
        color: var(--planted-green);
    }

    /* ==================== SECTION TITLES ==================== */
    .section-title {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2rem, 5vw, 3rem);
        color: var(--planted-purple);
        letter-spacing: -0.02em;
        line-height: 0.95;
        margin-bottom: 1.5rem;
    }

    /* ==================== INGREDIENTS ==================== */
    .ingredients {
        padding: 5rem 1.5rem;
        background: white;
    }

    .ingredients-inner {
        max-width: 800px;
        margin: 0 auto;
    }

    .ingredient-pills {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .pill {
        background: linear-gradient(180deg, #FFFFFF 0%, #F8F5F2 100%);
        padding: 0.9rem 1.5rem;
        border-radius: 100px;
        font-weight: 600;
        color: var(--planted-purple);
        box-shadow:
            0 1px 2px rgba(0,0,0,0.04),
            0 4px 12px rgba(0,0,0,0.04);
