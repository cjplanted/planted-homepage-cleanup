---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    const products = await getCollection('products');
    return products.map((product) => ({
        params: { slug: product.data.slug },
        props: { product },
    }));
}

const { product } = Astro.props;
const base = import.meta.env.BASE_URL;

// Get related products (same category, excluding current)
const allProducts = await getCollection('products');
const relatedProducts = allProducts
    .filter(p => p.data.category === product.data.category && p.data.slug !== product.data.slug)
    .slice(0, 3);

// Get recipes that might feature this product
const recipes = await getCollection('recipes');
const productRecipes = recipes
    .filter(r => {
        const titleLower = r.data.title.toLowerCase();
        const categoryLower = product.data.category.toLowerCase();
        return titleLower.includes(categoryLower) ||
               titleLower.includes(product.data.name.toLowerCase().replace('planted.', ''));
    })
    .slice(0, 4);

// Fallback to featured recipes if no product-specific ones
const featuredRecipes = productRecipes.length > 0 ? productRecipes : recipes.slice(0, 4);

// Parse ingredients from string to array
const ingredientsList = product.data.ingredients
    ? product.data.ingredients.split(',').map(i => i.trim())
    : ['Pea Protein', 'Water', 'Rapeseed Oil', 'Pea Fiber', 'Salt', 'Vitamin B12'];

// Color mappings for gradients
const colorGradients: Record<string, { main: string; light: string; dark: string }> = {
    yellow: { main: '#E8D494', light: '#F5E6B8', dark: '#D4C074' },
    terracotta: { main: '#D4A894', light: '#E8C4B8', dark: '#C08870' },
    purple: { main: '#61269E', light: '#9B6BC7', dark: '#4A1D7A' },
    olive: { main: '#B4C494', light: '#C8D4B8', dark: '#94A870' },
    burgundy: { main: '#C494A8', light: '#D4B8C4', dark: '#A87088' },
    teal: { main: '#94C4C4', light: '#B8D4D4', dark: '#70A8A8' },
    coral: { main: '#E8B8A4', light: '#F5D4C8', dark: '#D49880' },
    navy: { main: '#94A8C4', light: '#B8C4D4', dark: '#7088A8' },
    green: { main: '#6BBF59', light: '#94D494', dark: '#4A9F40' },
    orange: { main: '#E8B894', light: '#F5D4B8', dark: '#D49870' },
    red: { main: '#E8A4A4', light: '#F5C4C4', dark: '#D48080' },
};

const colors = colorGradients[product.data.color] || colorGradients.purple;
---

<Layout title={`${product.data.name} ${product.data.variant} ‚Äì Planted`} currentPage="products">
    <!-- Hero Section - Pack to Plate Animation -->
    <section class="hero" id="hero">
        <div class="hero-sticky">
            <!-- Animated gradient background -->
            <div class="hero-bg" id="heroBg"></div>

            <!-- Floating particles -->
            <div class="hero-particles" id="heroParticles">
                <span class="particle"></span>
                <span class="particle"></span>
                <span class="particle"></span>
                <span class="particle"></span>
                <span class="particle"></span>
                <span class="particle"></span>
            </div>

            <!-- Dish image (hidden initially, fades in on scroll) -->
            {product.data.images.dish && (
                <div class="hero-dish" id="heroDish">
                    <img src={product.data.images.dish} alt={`Delicious ${product.data.name} dish`} loading="eager">
                    <div class="dish-steam"></div>
                </div>
            )}

            <!-- Pack shot (visible initially, animates out on scroll) -->
            <div class="hero-pack" id="heroPack">
                {product.data.isNew && <span class="product-badge-new">New</span>}
                <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant} packaging`} loading="eager">
            </div>

            <!-- The BIG protein stat - THIS SHOULD SLAP -->
            <div class="hero-protein" id="heroProtein">
                <span class="hero-protein-value">
                    <span class="num" data-count="17">0</span><span class="unit">g</span>
                </span>
                <span class="hero-protein-label">Protein per 100g</span>
            </div>

            <!-- Product info (appears after scroll) -->
            <div class="hero-info" id="heroInfo">
                <div class="hero-text">
                    <h1 class="product-title">{product.data.name}</h1>
                    <p class="product-variant">{product.data.variant}</p>
                </div>
            </div>

            <!-- Scroll hint -->
            <div class="scroll-hint" id="scrollHint">
                <div class="scroll-line"></div>
                <span>Scroll to discover</span>
            </div>
        </div>
    </section>

    <!-- Quick Stats Bar -->
    <section class="stats" id="statsSection">
        <div class="stats-grid">
            <div class="stat reveal-stat" style="--delay: 0">
                <span class="stat-icon">üí™</span>
                <span class="stat-value" data-count="17">0</span>
                <span class="stat-unit">g</span>
                <span class="stat-label">Protein</span>
            </div>
            <div class="stat reveal-stat" style="--delay: 1">
                <span class="stat-icon">üåø</span>
                <span class="stat-value">{ingredientsList.length}</span>
                <span class="stat-unit"></span>
                <span class="stat-label">Ingredients</span>
            </div>
            <div class="stat reveal-stat" style="--delay: 2">
                <span class="stat-icon">üåç</span>
                <span class="stat-value" data-count="77">0</span>
                <span class="stat-unit">%</span>
                <span class="stat-label">Less CO‚ÇÇ</span>
            </div>
            <div class="stat zero reveal-stat" style="--delay: 3">
                <span class="stat-icon">üå±</span>
                <span class="stat-value">0</span>
                <span class="stat-unit"></span>
                <span class="stat-label">Animals</span>
                <span class="stat-celebration">üéâ</span>
            </div>
        </div>
    </section>

    <!-- Trust Badges -->
    <section class="trust">
        <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L4 5v6.09c0 5.05 3.41 9.76 8 10.91 4.59-1.15 8-5.86 8-10.91V5l-8-3zm-1.06 13.54L7.4 12l1.41-1.41 2.12 2.12 4.24-4.24 1.41 1.41-5.64 5.66z"/></svg>
            <span>B Corp Certified</span>
        </div>
        <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>
            <span>Made in Switzerland</span>
        </div>
        <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66.95-2.3c.48.17.98.3 1.34.3C19 20 22 3 22 3c-1 2-8 2.25-13 3.25S2 11.5 2 13.5s1.75 3.75 1.75 3.75C7 8 17 8 17 8z"/></svg>
            <span>100% Plant-Based</span>
        </div>
    </section>

    <!-- Ingredients Section -->
    <section class="ingredients">
        <div class="ingredients-inner">
            <h2 class="section-title reveal-up">What's inside</h2>

            <div class="ingredient-pills">
                {ingredientsList.map((ingredient, index) => (
                    <div class="pill reveal-up" style={`--delay: ${index * 0.05}s`}>
                        <span class="pill-text">{ingredient}</span>
                        {index === 0 && <span class="pill-percent">33%</span>}
                    </div>
                ))}
            </div>

            <div class="ingredient-sticker reveal-up">
                <span>That's it.</span>
                <strong>{ingredientsList.length} ingredients.</strong>
                <span>No weird stuff.</span>
            </div>
        </div>
    </section>

    <!-- Nutrition Section -->
    <section class="nutrition">
        <div class="nutrition-layout">
            <!-- Food image on left with parallax -->
            <div class="nutrition-image" id="nutritionImage">
                <img src={product.data.images.dish || product.data.images.main} alt={`${product.data.name} prepared dish`}>
                <div class="nutrition-image-overlay"></div>
            </div>

            <!-- Nutrition content on right -->
            <div class="nutrition-content">
                <h2 class="section-title reveal-up">Nutritional values</h2>

                <!-- Key nutrients with custom icons -->
                <div class="nutrition-highlights reveal-up">
                    <div class="nutrient-card">
                        <div class="nutrient-icon protein-icon">
                            <svg viewBox="0 0 32 32" fill="none"><path d="M16 4c-2 0-4 2-4 4v8c0 2 2 4 4 4s4-2 4-4V8c0-2-2-4-4-4z" stroke="currentColor" stroke-width="2"/><path d="M8 14c0 4.4 3.6 8 8 8s8-3.6 8-8" stroke="currentColor" stroke-width="2"/><path d="M16 26v4M12 28h8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                        </div>
                        <span class="nutrient-value">17g</span>
                        <span class="nutrient-label">Protein</span>
                        <div class="nutrient-bar"><div class="nutrient-bar-fill" style="--width: 85%"></div></div>
                    </div>
                    <div class="nutrient-card">
                        <div class="nutrient-icon fiber-icon">
                            <svg viewBox="0 0 32 32" fill="none"><path d="M16 28V16M16 16c-4-2-6-6-6-10 0 6 6 10 6 10zM16 16c4-2 6-6 6-10 0 6-6 10-6 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                        </div>
                        <span class="nutrient-value">5.7g</span>
                        <span class="nutrient-label">Fiber</span>
                        <div class="nutrient-bar"><div class="nutrient-bar-fill" style="--width: 57%"></div></div>
                    </div>
                    <div class="nutrient-card">
                        <div class="nutrient-icon b12-icon">
                            <svg viewBox="0 0 32 32" fill="none"><polygon points="16,4 20,12 28,14 22,20 24,28 16,24 8,28 10,20 4,14 12,12" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/></svg>
                        </div>
                        <span class="nutrient-value">72%</span>
                        <span class="nutrient-label">Vitamin B12*</span>
                        <div class="nutrient-bar"><div class="nutrient-bar-fill" style="--width: 72%"></div></div>
                    </div>
                    <div class="nutrient-card">
                        <div class="nutrient-icon iron-icon">
                            <svg viewBox="0 0 32 32" fill="none"><path d="M16 4v8M12 8h8M16 12l-6 14h12l-6-14z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                        </div>
                        <span class="nutrient-value">27%</span>
                        <span class="nutrient-label">Iron*</span>
                        <div class="nutrient-bar"><div class="nutrient-bar-fill" style="--width: 27%"></div></div>
                    </div>
                </div>

                <!-- Expandable table -->
                <div class="nutrition-table-wrapper reveal-up">
                    <button class="nutrition-toggle" id="nutritionToggle">
                        <span>Full nutrition info</span>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
                    </button>

                    <div class="nutrition-table" id="nutritionTable">
                        <table>
                            <thead>
                                <tr>
                                    <th>Per 100g</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td>Energy</td><td>718 kJ / 172 kcal</td></tr>
                                <tr><td>Fat</td><td>8.1 g</td></tr>
                                <tr class="indent"><td>of which saturates</td><td>0.7 g</td></tr>
                                <tr><td>Carbohydrates</td><td>4.9 g</td></tr>
                                <tr class="indent"><td>of which sugars</td><td>2.1 g</td></tr>
                                <tr><td>Fiber</td><td>5.7 g</td></tr>
                                <tr class="highlight"><td>Protein</td><td>17 g</td></tr>
                                <tr><td>Salt</td><td>0.8 g</td></tr>
                                <tr><td>Vitamin B12</td><td>1.8 ¬µg (72%*)</td></tr>
                                <tr><td>Iron</td><td>3.8 mg (27%*)</td></tr>
                            </tbody>
                        </table>
                        <p class="nutrition-note">*of daily reference intake</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Cooking Section -->
    <section class="cooking">
        <div class="cooking-inner">
            <h2 class="section-title reveal-up">Cook it your way</h2>

            <div class="cooking-grid">
                <div class="cook-step reveal-up" style="--delay: 0s">
                    <div class="cook-step-icon">
                        <svg viewBox="0 0 48 48" fill="none"><circle cx="24" cy="24" r="18" stroke="currentColor" stroke-width="2"/><path d="M24 14v10l6 4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                    </div>
                    <div class="cook-step-num">1</div>
                    <h3>Season</h3>
                    <p>Your blank canvas. Go wild or keep it simple with salt & pepper.</p>
                </div>

                <div class="cook-step reveal-up" style="--delay: 0.1s">
                    <div class="cook-step-icon">
                        <svg viewBox="0 0 48 48" fill="none"><path d="M24 8c-8 0-14 6-14 14 0 10 14 18 14 18s14-8 14-18c0-8-6-14-14-14z" stroke="currentColor" stroke-width="2"/><path d="M20 20c0-2.2 1.8-4 4-4s4 1.8 4 4" stroke="currentColor" stroke-width="2"/></svg>
                    </div>
                    <div class="cook-step-num">2</div>
                    <h3>Heat</h3>
                    <p>Oil in pan. Get it hot. Don't be shy ‚Äî high heat is your friend.</p>
                </div>

                <div class="cook-step reveal-up" style="--delay: 0.2s">
                    <div class="cook-step-icon">
                        <svg viewBox="0 0 48 48" fill="none"><rect x="8" y="20" width="32" height="16" rx="2" stroke="currentColor" stroke-width="2"/><path d="M14 20v-6a2 2 0 012-2h16a2 2 0 012 2v6" stroke="currentColor" stroke-width="2"/><path d="M18 28h12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
                    </div>
                    <div class="cook-step-num">3</div>
                    <h3>Sear</h3>
                    <p>Golden edges. Crispy outside. 3-5 minutes. Done.</p>
                </div>
            </div>

            <!-- Pro Tip -->
            <div class="pro-tip reveal-up">
                <span class="pro-tip-icon">üí°</span>
                <div class="pro-tip-content">
                    <strong>Pro tip:</strong> Don't move it! Let it sear undisturbed for maximum crispiness.
                </div>
            </div>

            <div class="cook-meta reveal-up">
                <div class="cook-meta-item">
                    <div class="cook-timer">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                    </div>
                    <strong>3-5 min</strong>
                    <span>Cook time</span>
                </div>
                <div class="cook-meta-item">
                    <div class="cook-timer">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v4M12 18v4M4.93 4.93l2.83 2.83M16.24 16.24l2.83 2.83M2 12h4M18 12h4M4.93 19.07l2.83-2.83M16.24 7.76l2.83-2.83"/></svg>
                    </div>
                    <strong>High</strong>
                    <span>Heat</span>
                </div>
                {product.data.weight && (
                    <div class="cook-meta-item">
                        <div class="cook-timer">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20.59 13.41l-7.17 7.17a2 2 0 01-2.83 0L2 12V2h10l8.59 8.59a2 2 0 010 2.82z"/><line x1="7" y1="7" x2="7.01" y2="7"/></svg>
                        </div>
                        <strong>{product.data.weight}</strong>
                        <span>Pack size</span>
                    </div>
                )}
            </div>
        </div>
    </section>

    <!-- Related Recipes Section -->
    <section class="recipes">
        <div class="recipes-inner">
            <div class="recipes-header">
                <h2 class="section-title reveal-up">Make something amazing</h2>
                <a href={`${base}/recipes`} class="recipes-link reveal-up">All recipes ‚Üí</a>
            </div>

            <div class="recipes-carousel">
                <div class="recipes-fade recipes-fade-left"></div>
                <div class="recipes-scroll" id="recipesScroll">
                    {featuredRecipes.map((recipe, index) => (
                        <a href={`${base}/recipes/${recipe.data.slug}`} class="recipe-card reveal-up" style={`--delay: ${index * 0.1}s`}>
                            <div class="recipe-img">
                                <img src={recipe.data.image} alt={recipe.data.title} loading="lazy">
                                <div class="recipe-overlay">
                                    <span class="recipe-cta">View Recipe ‚Üí</span>
                                </div>
                            </div>
                            <div class="recipe-info">
                                <h3>{recipe.data.title}</h3>
                                <div class="recipe-meta">
                                    <span class="recipe-time">‚è± {recipe.data.cookTime} min</span>
                                    <span class="recipe-difficulty">{recipe.data.difficulty}</span>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
                <div class="recipes-fade recipes-fade-right"></div>
            </div>
        </div>
    </section>

    <!-- More Products Section -->
    {relatedProducts.length > 0 && (
        <section class="more-products">
            <div class="more-inner">
                <div class="more-header">
                    <h2 class="section-title reveal-up">More {product.data.category}</h2>
                    <a href={`${base}/products`} class="more-link reveal-up">All products ‚Üí</a>
                </div>
                <div class="more-grid">
                    {relatedProducts.map((related, index) => (
                        <a href={`${base}/products/${related.data.slug}`} class="more-card reveal-up" data-color={related.data.color} style={`--delay: ${index * 0.1}s`}>
                            <div class="more-image">
                                <img src={related.data.images.main} alt={`${related.data.name} ${related.data.variant}`}>
                            </div>
                            <div class="more-info">
                                <div class="more-name">{related.data.name}</div>
                                <div class="more-variant">{related.data.variant}</div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        </section>
    )}

    <!-- CTA Section -->
    <section class="cta">
        <div class="cta-content">
            <h2 class="cta-title">Try it.</h2>
            <p class="cta-subtitle">Find planted near you</p>
            <div class="cta-buttons">
                <a href={`${base}/#locator`} class="btn btn-primary">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                    </svg>
                    Find a Store
                </a>
                <a href={`${base}/products`} class="btn btn-secondary">See All Products</a>
            </div>
        </div>
    </section>
</Layout>

<style define:vars={{ colorMain: colors.main, colorLight: colors.light, colorDark: colors.dark }}>
    /* ==================== CSS VARIABLES ==================== */
    :root {
        --transition-fast: 0.15s ease;
        --transition-medium: 0.3s ease;
        --transition-slow: 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        --transition-enter: 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* ==================== HERO SECTION ==================== */
    .hero {
        min-height: 250vh;
        position: relative;
    }

    .hero-sticky {
        position: sticky;
        top: 0;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    /* Animated gradient background */
    .hero-bg {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            var(--colorLight) 0%,
            var(--colorMain) 35%,
            var(--colorDark) 70%,
            var(--colorMain) 100%
        );
        background-size: 400% 400%;
        animation: gradientShift 20s ease infinite;
    }

    @keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    /* Floating particles */
    .hero-particles {
        position: absolute;
        inset: 0;
        overflow: hidden;
        pointer-events: none;
    }

    .particle {
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(255,255,255,0.3);
        border-radius: 50%;
        animation: particleFloat 15s infinite ease-in-out;
    }

    .particle:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; animation-duration: 12s; }
    .particle:nth-child(2) { left: 30%; top: 60%; animation-delay: 2s; animation-duration: 18s; }
    .particle:nth-child(3) { left: 50%; top: 30%; animation-delay: 4s; animation-duration: 14s; }
    .particle:nth-child(4) { left: 70%; top: 70%; animation-delay: 1s; animation-duration: 16s; }
    .particle:nth-child(5) { left: 85%; top: 40%; animation-delay: 3s; animation-duration: 20s; }
    .particle:nth-child(6) { left: 20%; top: 80%; animation-delay: 5s; animation-duration: 13s; }

    @keyframes particleFloat {
        0%, 100% { transform: translateY(0) translateX(0) scale(1); opacity: 0.3; }
        25% { transform: translateY(-30px) translateX(10px) scale(1.2); opacity: 0.5; }
        50% { transform: translateY(-60px) translateX(-10px) scale(0.8); opacity: 0.4; }
        75% { transform: translateY(-30px) translateX(20px) scale(1.1); opacity: 0.6; }
    }

    /* Dish image - circular, smaller, with steam */
    .hero-dish {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.8);
        width: clamp(280px, 45vw, 480px);
        height: clamp(280px, 45vw, 480px);
        border-radius: 50%;
        opacity: 0;
        transition: opacity 0.8s ease, transform 1s var(--transition-slow);
        overflow: hidden;
        box-shadow:
            0 30px 60px rgba(0,0,0,0.3),
            0 0 0 1px rgba(255,255,255,0.1) inset;
        z-index: 5;
    }

    .hero-dish img {
        width: 120%;
        height: 120%;
        margin: -10%;
        object-fit: cover;
        object-position: center;
        filter: contrast(1.02) saturate(1.05);
        transition: transform 0.8s ease;
    }

    .hero-dish:hover img {
        transform: scale(1.05);
    }

    .hero-dish::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 50%;
        background: radial-gradient(circle, transparent 50%, rgba(0,0,0,0.2) 100%);
        pointer-events: none;
    }

    /* Steam effect */
    .dish-steam {
        position: absolute;
        top: -20px;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 60px;
        background: linear-gradient(to top, rgba(255,255,255,0.15), transparent);
        filter: blur(10px);
        opacity: 0;
        animation: steam 3s ease-in-out infinite;
    }

    @keyframes steam {
        0%, 100% { opacity: 0; transform: translateX(-50%) translateY(0) scaleY(1); }
        50% { opacity: 0.6; transform: translateX(-50%) translateY(-20px) scaleY(1.2); }
    }

    .hero-dish.visible {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }

    .hero-dish.visible .dish-steam {
        opacity: 1;
    }

    /* Pack shot - bouncy entry, 3D perspective */
    .hero-pack {
        position: relative;
        z-index: 10;
        width: clamp(280px, 50vw, 480px);
        perspective: 1000px;
        animation: packEntry 1s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        filter: drop-shadow(0 40px 60px rgba(0,0,0,0.3));
        will-change: transform, opacity;
    }

    @keyframes packEntry {
        0% {
            opacity: 0;
            transform: translateY(-50px) scale(0.8) rotateX(15deg);
        }
        60% {
            transform: translateY(10px) scale(1.02) rotateX(-5deg);
        }
        100% {
            opacity: 1;
            transform: translateY(0) scale(1) rotateX(0deg);
        }
    }

    .hero-pack img {
        width: 100%;
        height: auto;
        animation: packFloat 4s ease-in-out infinite;
        transform-style: preserve-3d;
    }

    @keyframes packFloat {
        0%, 100% { transform: translateY(0) rotateY(0deg); }
        50% { transform: translateY(-15px) rotateY(2deg); }
    }

    .product-badge-new {
        position: absolute;
        top: -10px;
        right: -10px;
        background: var(--planted-green);
        color: var(--planted-black);
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        z-index: 20;
        box-shadow: 0 4px 12px rgba(107,191,89,0.4);
    }

    /* THE BIG PROTEIN STAT - THIS SHOULD SLAP */
    .hero-protein {
        position: absolute;
        bottom: 15%;
        right: 5%;
        text-align: right;
        z-index: 20;
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.6s ease, transform 0.6s var(--transition-slow);
    }

    .hero-protein.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .hero-protein-value {
        display: block;
        font-family: 'VC Henrietta', serif;
        font-size: clamp(7rem, 22vw, 16rem);
        font-weight: 900;
        line-height: 0.8;
        letter-spacing: -0.03em;
    }

    .hero-protein-value .num {
        background: linear-gradient(180deg, #FFFFFF 0%, #E0E0E0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: none;
        filter: drop-shadow(0 4px 0 rgba(0,0,0,0.1)) drop-shadow(0 15px 30px rgba(0,0,0,0.2));
