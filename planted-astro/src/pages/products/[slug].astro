<script>
    function initProductPage() {
        // ==================== HERO SCROLL ANIMATION ====================
        const hero = document.getElementById('hero');
        const heroPack = document.getElementById('heroPack');
        const heroDish = document.getElementById('heroDish');
        const heroProtein = document.getElementById('heroProtein');
        const heroInfo = document.getElementById('heroInfo');
        const scrollHint = document.getElementById('scrollHint');

        function updateHeroAnimation() {
            if (!hero || !heroPack) return;

            const heroRect = hero.getBoundingClientRect();
            const scrollProgress = Math.min(Math.max(-heroRect.top / (hero.offsetHeight - window.innerHeight), 0), 1);

            // Pack animation: spin, scale, motion blur effect, fly away
            const packScale = 1 - (scrollProgress * 0.8);
            const packRotate = scrollProgress * 540; // 1.5 rotations
            const packY = scrollProgress * -100;
            const packOpacity = 1 - (scrollProgress * 2.5);
            const packBlur = scrollProgress * 8;

            heroPack.style.transform = `translateY(${packY}vh) rotate(${packRotate}deg) scale(${packScale})`;
            heroPack.style.opacity = String(Math.max(packOpacity, 0));
            heroPack.style.filter = `drop-shadow(0 40px 60px rgba(0,0,0,0.3)) blur(${packBlur}px)`;

            // Dish fade in with parallax (slower movement)
            if (heroDish) {
                const dishProgress = Math.max((scrollProgress - 0.2) / 0.5, 0);
                const dishParallax = scrollProgress * -30;

                if (scrollProgress > 0.2) {
                    heroDish.classList.add('visible');
                    heroDish.style.transform = `translate(-50%, calc(-50% + ${dishParallax}px)) scale(1)`;
                } else {
                    heroDish.classList.remove('visible');
                }
            }

            // Protein stat appears
            if (heroProtein) {
                if (scrollProgress > 0.4) {
                    heroProtein.classList.add('visible');
                    // Animate the number
                    const numEl = heroProtein.querySelector('.num');
                    if (numEl && !numEl.classList.contains('counted')) {
                        numEl.classList.add('counted');
                        animateNumber(numEl, 0, 17, 800);
                    }
                } else {
                    heroProtein.classList.remove('visible');
                }
            }

            // Info slide up
            if (heroInfo) {
                if (scrollProgress > 0.5) {
                    heroInfo.classList.add('visible');
                } else {
                    heroInfo.classList.remove('visible');
                }
            }

            // Hide scroll hint
            if (scrollHint) {
                if (scrollProgress > 0.05) {
                    scrollHint.classList.add('hidden');
                } else {
                    scrollHint.classList.remove('hidden');
                }
            }
        }

        window.addEventListener('scroll', updateHeroAnimation, { passive: true });
        updateHeroAnimation();

        // ==================== NUMBER ANIMATION ====================
        function animateNumber(el: Element, start: number, end: number, duration: number) {
            const startTime = performance.now();

            function update(currentTime: number) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                const easeOut = 1 - Math.pow(1 - progress, 3);
                const current = Math.round(start + (end - start) * easeOut);

                el.textContent = String(current);

                if (progress < 1) {
                    requestAnimationFrame(update);
                }
            }

            requestAnimationFrame(update);
        }

        // ==================== STATS ANIMATION ====================
        const statsSection = document.getElementById('statsSection');
        let statsAnimated = false;

        const statsObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !statsAnimated) {
                    statsAnimated = true;

                    // Animate each stat with stagger
                    document.querySelectorAll('.stat').forEach((stat, index) => {
                        setTimeout(() => {
                            stat.classList.add('animated');

                            // Animate number if it has data-count
                            const valueEl = stat.querySelector('.stat-value[data-count]');
                            if (valueEl) {
                                const target = parseInt(valueEl.getAttribute('data-count') || '0');
                                animateNumber(valueEl, 0, target, 1200);
                            }
                        }, index * 150);
                    });
                }
            });
        }, { threshold: 0.3 });

        if (statsSection) statsObserver.observe(statsSection);

        // ==================== NUTRITION TOGGLE ====================
        const nutritionToggle = document.getElementById('nutritionToggle');
        const nutritionTable = document.getElementById('nutritionTable');

        nutritionToggle?.addEventListener('click', () => {
            nutritionTable?.classList.toggle('open');
            nutritionToggle?.classList.toggle('open');
        });

        // ==================== NUTRIENT BARS ANIMATION ====================
        const nutritionHighlights = document.querySelector('.nutrition-highlights');

        const nutritionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    document.querySelectorAll('.nutrient-bar-fill').forEach((bar, index) => {
                        setTimeout(() => {
                            bar.classList.add('animated');
                        }, index * 150);
                    });
                }
            });
        }, { threshold: 0.5 });

        if (nutritionHighlights) nutritionObserver.observe(nutritionHighlights);

        // ==================== REVEAL ON SCROLL ====================
        const revealElements = document.querySelectorAll('.reveal-up');

        const revealObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

        revealElements.forEach(el => revealObserver.observe(el));

        // ==================== NUTRITION IMAGE PARALLAX ====================
        const nutritionImage = document.getElementById('nutritionImage');

        if (nutritionImage) {
            window.addEventListener('scroll', () => {
                const rect = nutritionImage.getBoundingClientRect();
                const viewportHeight = window.innerHeight;

                if (rect.top < viewportHeight && rect.bottom > 0) {
                    const progress = (viewportHeight - rect.top) / (viewportHeight + rect.height);
                    const parallax = (progress - 0.5) * 30;
                    const img = nutritionImage.querySelector('img');
                    if (img) {
                        (img as HTMLElement).style.transform = `translateY(${parallax}px)`;
                    }
                }
            }, { passive: true });
        }
    }

    // Initialize
    initProductPage();
    document.addEventListener('astro:page-load', initProductPage);
</script>
