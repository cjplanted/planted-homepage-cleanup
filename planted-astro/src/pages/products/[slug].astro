        background: var(--planted-cream);
        padding: 4rem 1.5rem;
    }

    .recipe-section-header {
        text-align: center;
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .recipe-section-header h2 {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(1.8rem, 5vw, 2.5rem);
        color: var(--planted-purple);
        margin-bottom: 0.5rem;
    }

    .recipe-section-header p {
        color: var(--planted-black);
        opacity: 0.7;
    }

    .recipe-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto 2rem;
    }

    .recipe-card {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .recipe-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.1);
    }

    .recipe-image {
        aspect-ratio: 16/10;
        overflow: hidden;
    }

    .recipe-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .recipe-info {
        padding: 1rem;
    }

    .recipe-title {
        font-weight: 700;
        color: var(--planted-black);
        margin-bottom: 0.25rem;
    }

    .recipe-meta {
        font-size: 0.85rem;
        color: var(--planted-black);
        opacity: 0.6;
    }

    .recipe-cta {
        text-align: center;
    }

    @media (min-width: 768px) {
        .related-products {
            padding: 4rem 3rem;
        }

        .recipe-section {
            padding: 5rem 3rem;
        }
    }

    @media (min-width: 1024px) {
        .breadcrumb {
            padding: 1rem 3rem;
        }
    }
</style>
