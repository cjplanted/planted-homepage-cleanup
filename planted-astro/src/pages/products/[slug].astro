---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
    const products = await getCollection('products');
    return products.map((product) => ({
        params: { slug: product.data.slug },
        props: { product },
    }));
}

const { product } = Astro.props;
const base = import.meta.env.BASE_URL;

// Get related products (same category, excluding current)
const allProducts = await getCollection('products');
const relatedProducts = allProducts
    .filter(p => p.data.category === product.data.category && p.data.slug !== product.data.slug)
    .slice(0, 3);

// Get all recipes for the recipe section
const recipes = await getCollection('recipes');
const featuredRecipes = recipes.slice(0, 4);
---

<Layout title={`${product.data.name} ${product.data.variant} ‚Äì Planted`} currentPage="products">
    <div class="product-page">
        <nav class="breadcrumb">
            <a href={`${base}/products`}>Products</a>
            <span>/</span>
            <span>{product.data.name} {product.data.variant}</span>
        </nav>

        <div class="product-detail">
            <div class="product-image-section" data-color={product.data.color}>
                <div class="product-image-container">
                    {product.data.isNew && <span class="product-badge-new">New</span>}
                    <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`} class="product-main-image">
                </div>
            </div>

            <div class="product-info-section">
                <div class="product-category">{product.data.category}</div>
                <h1 class="product-title">{product.data.name}</h1>
                <p class="product-variant-name">{product.data.variant}</p>

                {product.data.description && (
                    <p class="product-tagline">{product.data.description}</p>
                )}

                {product.data.longDescription && (
                    <p class="product-description">{product.data.longDescription}</p>
                )}

                {product.data.weight && (
                    <div class="product-weight">
                        <span class="weight-label">Size:</span>
                        <span class="weight-value">{product.data.weight}</span>
                    </div>
                )}

                {product.data.features && product.data.features.length > 0 && (
                    <div class="product-features">
                        {product.data.features.map((feature) => (
                            <span class="feature-tag">{feature}</span>
                        ))}
                    </div>
                )}
            </div>
        </div>

        <!-- Product Details Sections -->
        <div class="product-details-grid">
            {product.data.preparation && (
                <div class="detail-card">
                    <div class="detail-icon">üë®‚Äçüç≥</div>
                    <h3>How to Prepare</h3>
                    <p>{product.data.preparation}</p>
                </div>
            )}

            {product.data.ingredients && (
                <div class="detail-card">
                    <div class="detail-icon">üå±</div>
                    <h3>Ingredients</h3>
                    <p>{product.data.ingredients}</p>
                </div>
            )}

            <div class="detail-card">
                <div class="detail-icon">üá®üá≠</div>
                <h3>Made in Switzerland</h3>
                <p>Crafted with care in our Swiss facility using innovative fermentation technology and natural ingredients.</p>
            </div>

            <div class="detail-card">
                <div class="detail-icon">üåç</div>
                <h3>Better for the Planet</h3>
                <p>Up to 97% less CO‚ÇÇ, 95% less water, and zero animals. Every bite makes a difference.</p>
            </div>
        </div>

        <!-- Where to Find Section -->
        <section class="find-section">
            <h2>Where to find {product.data.name}</h2>
            <p>Available at leading retailers across Switzerland and Europe.</p>
            <a href={`${base}/#locator`} class="btn btn-primary">
                <span>üìç</span> Find a Store
            </a>
        </section>

        {relatedProducts.length > 0 && (
            <section class="related-products">
                <h2>More from {product.data.category}</h2>
                <div class="related-grid">
                    {relatedProducts.map((related) => (
                        <a href={`${base}/products/${related.data.slug}`} class="related-card" data-color={related.data.color}>
                            <div class="related-image">
                                <img src={related.data.images.main} alt={related.data.name}>
                            </div>
                            <div class="related-info">
                                <div class="related-name">{related.data.name}</div>
                                <div class="related-variant">{related.data.variant}</div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>
        )}

        <!-- Recipe Section -->
        <section class="recipe-section">
            <div class="recipe-section-header">
                <h2>Get inspired</h2>
                <p>Discover delicious recipes featuring our plant-based products</p>
            </div>
            <div class="recipe-grid">
                {featuredRecipes.map((recipe) => (
                    <div class="recipe-card">
                        <div class="recipe-image">
                            <img src={recipe.data.image} alt={recipe.data.title}>
                        </div>
                        <div class="recipe-info">
                            <div class="recipe-title">{recipe.data.title}</div>
                            <div class="recipe-meta">{recipe.data.cookTime} min ‚Ä¢ {recipe.data.difficulty}</div>
                        </div>
                    </div>
                ))}
            </div>
            <div class="recipe-cta">
                <a href={`${base}/recipes`} class="btn btn-secondary">
                    Explore All Recipes ‚Üí
                </a>
            </div>
        </section>
    </div>
</Layout>

<style>
    .product-page {
        padding-top: 80px;
    }

    .breadcrumb {
