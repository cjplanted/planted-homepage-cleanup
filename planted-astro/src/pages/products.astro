---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const products = await getCollection('products');
const sortedProducts = products.sort((a, b) => a.data.order - b.data.order);
const base = import.meta.env.BASE_URL;

// Get unique categories for filter tabs
const categories = ['all', ...new Set(sortedProducts.map(p => p.data.category))];
---

<Layout title="Products ‚Äì Planted" currentPage="products">
    <header class="page-header">
        <h1>Our Products</h1>
        <p>Plant-based meat that actually tastes like meat. No compromises.</p>
    </header>

    <div class="filter-tabs">
        {categories.map((cat) => (
            <button class:list={["filter-tab", { active: cat === 'all' }]} data-filter={cat}>
                {cat === 'all' ? 'All' : cat.charAt(0).toUpperCase() + cat.slice(1)}
            </button>
        ))}
    </div>

    <section class="products-section">
        <div class="products-grid">
            {sortedProducts.map((product) => (
                <a href={`${base}/products/${product.data.slug}`} class="product-card" data-color={product.data.color} data-category={product.data.category}>
                    <div class="product-card-inner">
                        {product.data.isNew && <span class="product-badge-new">New</span>}
                        {product.data.images.background && (
                            <div class="product-grid-overlay">
                                <img src={product.data.images.background} alt="">
                            </div>
                        )}
                        <div class="product-image product-image-pack">
                            <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`}>
                        </div>
                        {product.data.images.dish && (
                            <div class="product-image product-image-dish">
                                <img src={product.data.images.dish} alt={`${product.data.name} ${product.data.variant} dish`}>
                            </div>
                        )}
                    </div>
                    <div class="product-info">
                        <div class="product-name">{product.data.name}</div>
                        <div class="product-variant">{product.data.variant}</div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <section class="cta-section">
        <h2>Ready to try?</h2>
        <p>Find planted at your favourite store. We're basically everywhere now.</p>
        <a href={`${base}/#locator`} class="btn btn-green">üìç Find Near You</a>
    </section>
</Layout>

<style>
    .products-section {
        padding: 2rem 1.5rem 6rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 2rem;
    }

    @media (min-width: 768px) {
        .products-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .products-section {
            padding: 2rem 3rem 8rem;
        }

        .products-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @media (min-width: 1440px) {
        .products-section {
            padding: 2rem 5rem 8rem;
            max-width: 1600px;
        }
    }

    .product-card {
        text-decoration: none;
        transition: opacity 0.3s ease, transform 0.3s ease;
        display: block;
    }

    .product-card:hover {
        transform: translateY(-4px);
    }

    .product-card.hidden {
        display: none;
    }

    .product-card-inner {
        position: relative;
        border-radius: 1.5rem;
        padding: 1.5rem;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    /* Product card color backgrounds are defined in global.css */

    .product-badge-new {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-size: 0.65rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.35rem 0.7rem;
        border-radius: 100px;
        z-index: 10;
    }

    .product-badge-oos {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: rgba(0,0,0,0.6);
        color: white;
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.3rem 0.6rem;
        border-radius: 100px;
        z-index: 10;
    }

    .product-grid-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
        pointer-events: none;
    }

    .product-grid-overlay img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-card:hover .product-grid-overlay {
        opacity: 1;
    }

    .product-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        left: 0;
        padding: 1.5rem;
        transition: opacity 0.4s ease;
        z-index: 2;
    }

    .product-image-pack {
        opacity: 1;
    }

    .product-image-dish {
        opacity: 0;
    }

    .product-card:hover .product-image-pack {
        opacity: 0;
    }

    .product-card:hover .product-image-dish {
        opacity: 1;
    }

    .product-image img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .product-info {
        padding: 1rem 0.5rem 0;
    }

    .product-name {
        font-weight: 700;
        color: var(--planted-black);
        font-size: 1rem;
    }

    .product-variant {
        color: var(--planted-black);
        opacity: 0.6;
        font-size: 0.9rem;
        margin-bottom: 0.25rem;
    }

    .product-price {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--planted-purple);
    }

    .filter-tabs {
        display: flex;
        gap: 0.5rem;
        padding: 0 1.5rem;
        max-width: 1400px;
        margin: 0 auto 1rem;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
    }

    .filter-tabs::-webkit-scrollbar {
        display: none;
    }

    .filter-tab {
        background: transparent;
        border: 2px solid var(--planted-purple);
        color: var(--planted-purple);
        padding: 0.6rem 1.25rem;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        white-space: nowrap;
        transition: all 0.3s ease;
        text-transform: capitalize;
    }

    .filter-tab:hover {
        background: rgba(97, 38, 158, 0.1);
    }

    .filter-tab.active {
        background: var(--planted-purple);
        color: white;
    }

    @media (min-width: 1024px) {
        .filter-tabs {
            padding: 0 3rem;
        }
    }
</style>

<script>
    document.querySelectorAll('.filter-tab').forEach(tab => {
        tab.addEventListener('click', () => {
            // Update active state
            document.querySelectorAll('.filter-tab').forEach(t => t.classList.remove('active'));
            tab.classList.add('active');

            // Get filter value
            const filter = (tab as HTMLElement).dataset.filter || 'all';

            // Filter cards
            document.querySelectorAll('.product-card').forEach(card => {
                const category = (card as HTMLElement).dataset.category || '';

                if (filter === 'all') {
                    card.classList.remove('hidden');
                } else if (category === filter) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        });
    });
</script>
