---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import StoreLocator from '../components/StoreLocator.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
const base = import.meta.env.BASE_URL;

const products = await getCollection('products');
const featuredProducts = products
    .sort((a, b) => a.data.order - b.data.order);

const recipes = await getCollection('recipes');
const featuredRecipes = recipes
    .sort((a, b) => a.data.order - b.data.order)
    .slice(0, 4);

const settings = await getEntry('settings', 'global');
---

<Layout title="Planted ‚Äì Approved by Meat Lovers">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-video-wrapper">
            <div class="hero-video-container" id="heroVideo">
                <video class="hero-video" autoplay muted loop playsinline>
                    <source src={`${base}/video/hero.mp4`} type="video/mp4">
                </video>
                <!-- Playful floating sticker -->
                <div class="hero-sticker">
                    <span class="sticker-text">100%</span>
                    <span class="sticker-label">plant-based</span>
                </div>
            </div>
        </div>

        <div class="hero-content" id="heroContent">
            <div class="hero-badge">B Corp Certified</div>
            <h1>{settings?.data.heroTitle}</h1>
            <p class="hero-subtitle">{settings?.data.heroSubtitle}</p>
            <div class="hero-buttons">
                <a href="#locator" class="btn btn-primary">
                    Find Near You
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="btn-icon">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                    </svg>
                </a>
                <a href="#products" class="btn btn-secondary">
                    Explore Products
                </a>
            </div>
        </div>

        <!-- Trust indicators -->
        <div class="hero-trust">
            <span class="trust-item">Made in Switzerland</span>
            <span class="trust-divider"></span>
            <span class="trust-item">8,000+ restaurants</span>
            <span class="trust-divider"></span>
            <span class="trust-item">6 countries</span>
        </div>
    </section>

    <!-- Statement Section -->
    <section class="statement">
        <div class="statement-inner">
            <h2 class="reveal">
                {settings?.data.statementTitle}
                <span class="statement-highlight">{settings?.data.statementHighlight}</span>
            </h2>
            <p class="reveal reveal-delay-1">{settings?.data.statementSubtitle}</p>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
        <div class="products-header">
            <h2 class="reveal">Our highlights</h2>
            <a href={`${base}/products`} class="all-products-btn reveal">
                ‚Üí All Products
            </a>
        </div>

        <div class="products-carousel">
            <div class="products-scroll" id="productsScroll">
                {featuredProducts.map((product) => (
                    <a href={`${base}/products/${product.data.slug}`} class="product-card reveal-scale" data-color={product.data.color}>
                        <div class="product-card-inner">
                            {product.data.isNew && <span class="product-badge-new">New</span>}
                            {product.data.images.background && (
                                <div class="product-grid-overlay">
                                    <img src={product.data.images.background} alt="" loading="lazy">
                                </div>
                            )}
                            <div class="product-image product-image-pack">
                                <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`} loading="lazy">
                            </div>
                            {product.data.images.dish && (
                                <div class="product-image product-image-dish">
                                    <img src={product.data.images.dish} alt={`${product.data.name} ${product.data.variant} dish`} loading="lazy">
                                </div>
                            )}
                        </div>
                        <div class="product-info">
                            <div class="product-name">{product.data.name}</div>
                            <div class="product-variant">{product.data.variant}</div>
                        </div>
                    </a>
                ))}
            </div>
        </div>

        <!-- Growing Carousel Navigation - Playful & On-Brand -->
        <div class="growing-nav">
            <!-- Left hand beckoning -->
            <button class="nav-hand nav-hand-left" id="carouselPrev" aria-label="Previous">
                <svg viewBox="0 0 60 60" class="hand-icon">
                    <path class="hand-palm" d="M35 45c-8 0-14-3-17-8-2-3-3-7-2-12l3-15c1-3 4-5 7-4s5 4 4 7l-2 8" fill="#FDF8F3" stroke="#61269E" stroke-width="2.5"/>
                    <path class="hand-finger f1" d="M28 19l2-10c1-2 3-4 5-3s3 3 2 5l-3 10" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f2" d="M33 17l1-12c0-2 2-4 4-4s4 2 4 4l-2 13" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f3" d="M40 18l2-11c0-2 2-3 4-3s3 2 3 4l-3 11" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f4" d="M46 22l2-8c0-2 2-3 3-2s2 2 2 4l-3 8" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                </svg>
                <span class="nav-hint">‚Üê psst!</span>
            </button>

            <!-- The Growing Stem with Leaves -->
            <div class="stem-container" id="stemContainer">
                <svg class="stem-svg" viewBox="0 0 300 50" preserveAspectRatio="none">
                    <!-- Animated growing stem -->
                    <path class="stem-path" d="M10 40 Q75 15, 150 25 T290 20" fill="none" stroke="#6BBF59" stroke-width="3" stroke-linecap="round"/>
                    <path class="stem-path-glow" d="M10 40 Q75 15, 150 25 T290 20" fill="none" stroke="#6BBF59" stroke-width="6" stroke-linecap="round" opacity="0.2"/>
                </svg>
                
                <!-- Leaf markers for each product -->
                <div class="leaves-track" id="carouselDots">
                    {featuredProducts.map((_, index) => (
                        <button 
                            class={`leaf-marker ${index === 0 ? 'active sprouting' : ''}`} 
                            data-index={index}
                            aria-label={`Go to product ${index + 1}`}
                        >
                            <svg viewBox="0 0 24 24" class="leaf-icon">
                                <path d="M12 2C6.5 2 2 6.5 2 12c0 4 2.5 7.5 6 9 .5-2 1.5-4 3-5.5 1.5-1.5 3-2.5 5-3-1.5-3.5-5-6-8.5-6-.5 0-1 0-1.5.1C7.5 4.5 9.5 3 12 3c5.5 0 10 4.5 10 9 0 2.5-1 4.5-2.5 6-1-1.5-2.5-2.5-4-3-1.5-.5-3-.5-4.5 0" fill="currentColor"/>
                            </svg>
                            <span class="leaf-sprout">üå±</span>
                        </button>
                    ))}
                </div>
            </div>

            <!-- Right hand beckoning -->
            <button class="nav-hand nav-hand-right" id="carouselNext" aria-label="Next">
                <svg viewBox="0 0 60 60" class="hand-icon">
                    <path class="hand-palm" d="M25 45c8 0 14-3 17-8 2-3 3-7 2-12l-3-15c-1-3-4-5-7-4s-5 4-4 7l2 8" fill="#FDF8F3" stroke="#61269E" stroke-width="2.5"/>
                    <path class="hand-finger f1" d="M32 19l-2-10c-1-2-3-4-5-3s-3 3-2 5l3 10" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f2" d="M27 17l-1-12c0-2-2-4-4-4s-4 2-4 4l2 13" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f3" d="M20 18l-2-11c0-2-2-3-4-3s-3 2-3 4l3 11" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                    <path class="hand-finger f4" d="M14 22l-2-8c0-2-2-3-3-2s-2 2-2 4l3 8" fill="#FDF8F3" stroke="#61269E" stroke-width="2"/>
                </svg>
                <span class="nav-hint">more! ‚Üí</span>
            </button>
        </div>

        <!-- Playful Progress Message -->
        <div class="growing-progress">
            <span class="progress-emoji">üå±</span>
            <span class="progress-text">
                Growing... <strong id="carouselCurrent">1</strong> of <strong>{featuredProducts.length}</strong> planted
            </span>
        </div>
    </section>

    <!-- Impact Section - Immersive Full-Width -->
    <section class="impact" id="impact">
        <!-- Abstract gradient background - no stock photos -->
        <div class="impact-bg">
            <div class="impact-gradient"></div>
            <div class="impact-pattern"></div>
        </div>

        <div class="impact-content">
            <!-- Playful intro -->
            <span class="impact-badge">The numbers don't lie</span>

            <!-- The big stats -->
            <div class="impact-stats">
                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactCO2}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">Less CO‚ÇÇ</div>
                    <div class="impact-stat-compare">vs. beef</div>
                </div>

                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactWater}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">Less Water</div>
                    <div class="impact-stat-compare">vs. beef</div>
                </div>

                <div class="impact-stat special">
                    <div class="impact-stat-value" data-count={settings?.data.impactAnimals}>0</div>
                    <div class="impact-stat-label">Animals Harmed</div>
                    <div class="impact-stat-compare">ever</div>
                </div>
            </div>

            <!-- Brand tagline -->
            <h2 class="impact-tagline">Same taste. Better for the planet.</h2>

            <!-- Source citation -->
            <p class="impact-source">Life Cycle Assessment verified by independent researchers</p>

            <!-- Call to action -->
            <div class="impact-cta">
                <a href={`${base}/our-story`} class="impact-btn">
                    See how we do it
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Decorative floating elements -->
        <div class="impact-float float-1"></div>
        <div class="impact-float float-2"></div>
        <div class="impact-float float-3"></div>
    </section>

    <!-- Recipes Section -->
    <section class="recipes-section" id="recipes">
        <div class="recipes-header">
            <h2 class="reveal">Get cooking</h2>
            <a href={`${base}/recipes`} class="reveal">All 150+ recipes ‚Üí</a>
        </div>

        <div class="recipes-scroll">
            {featuredRecipes.map((recipe) => (
                <a href={`${base}/recipes/${recipe.data.slug}`} class="recipe-card">
                    <div class="recipe-image">
                        <img src={recipe.data.image} alt={recipe.data.title} loading="lazy">
                    </div>
                    <div class="recipe-info">
                        <div class="recipe-title">{recipe.data.title}</div>
                        <div class="recipe-meta">{recipe.data.cookTime} min ‚Ä¢ {recipe.data.difficulty}</div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <!-- Store Locator -->
    <StoreLocator 
        title={settings?.data.locatorTitle || "Find planted near you"} 
        subtitle={settings?.data.locatorSubtitle || "Discover where to buy planted products in your area."} 
    />

    <!-- Newsletter Signup -->
    <NewsletterSignup />

    <!-- Business Section -->
    <section class="business" id="business">
        <div class="business-inner">
            <div>
                <span class="business-badge reveal">{settings?.data.businessBadge}</span>
                <h2 class="reveal">{settings?.data.businessTitle}</h2>
                <p class="reveal reveal-delay-1">{settings?.data.businessSubtitle}</p>
                <a href="#" class="business-cta reveal reveal-delay-2">
                    Get Samples ‚Üí
                </a>
            </div>

            <div class="business-stats">
                {settings?.data.businessStats?.map((stat) => (
                    <div class="business-stat reveal-scale">
                        <div class="business-stat-value">{stat.value}</div>
                        <div class="business-stat-label">{stat.label}</div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Hero Section */
    .hero {
        min-height: 100vh;
        min-height: 100dvh;
        background: var(--planted-cream);
        padding: 4rem 1.5rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-video-wrapper {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-video-container {
        position: relative;
        width: 100%;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 25px 80px rgba(97, 38, 158, 0.15);
        transform: rotate(-3deg) scale(0.95);
        transition: box-shadow 0.3s ease;
        will-change: transform;
    }

    .hero-video-container::before {
        content: '';
        display: block;
        padding-top: 70%;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Playful floating sticker */
    .hero-sticker {
        position: absolute;
        bottom: -1rem;
        right: -0.5rem;
        background: var(--planted-green);
        color: var(--planted-black);
        padding: 1rem 1.25rem;
        border-radius: 1rem;
        transform: rotate(8deg);
        box-shadow: 0 8px 24px rgba(107, 191, 89, 0.3);
        text-align: center;
        z-index: 10;
        animation: stickerBounce 3s ease-in-out infinite;
    }

    .sticker-text {
        display: block;
        font-family: 'VC Henrietta', serif;
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1;
    }

    .sticker-label {
        display: block;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: 0.15rem;
    }

    @keyframes stickerBounce {
        0%, 100% { transform: rotate(8deg) translateY(0); }
        50% { transform: rotate(8deg) translateY(-5px); }
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 2.5rem auto 0;
        text-align: center;
        opacity: 0;
        transform: translateY(40px);
    }

    .hero-content.animate-in {
        animation: fadeSlideUp 0.8s ease forwards;
        animation-delay: 0.3s;
    }

    @keyframes fadeSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hero badge */
    .hero-badge {
        display: inline-block;
        background: rgba(97, 38, 158, 0.1);
        border: 1px solid rgba(97, 38, 158, 0.2);
        color: var(--planted-purple);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        margin-bottom: 1.25rem;
    }

    .hero h1 {
        font-size: clamp(2.25rem, 10vw, 4.5rem);
        color: var(--planted-purple);
        margin-bottom: 1rem;
        line-height: 0.95;
    }

    .hero-subtitle {
        font-size: clamp(1rem, 3vw, 1.15rem);
        color: var(--planted-black);
        opacity: 0.7;
        max-width: 480px;
        margin: 0 auto 1.75rem;
        line-height: 1.5;
    }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }

    .hero-buttons .btn-icon {
        width: 18px;
        height: 18px;
        margin-left: 0.25rem;
    }

    /* Trust indicators */
    .hero-trust {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: auto;
        padding-top: 2rem;
        flex-wrap: wrap;
    }

    .trust-item {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--planted-purple);
        opacity: 0.6;
    }

    .trust-divider {
        width: 4px;
        height: 4px;
        background: var(--planted-purple);
        border-radius: 50%;
        opacity: 0.3;
    }

    @media (max-width: 640px) {
        .hero-sticker {
            bottom: -0.75rem;
            right: 0.5rem;
            padding: 0.75rem 1rem;
        }

        .sticker-text {
            font-size: 1.25rem;
        }

        .hero-trust {
            display: none;
        }
    }

    /* Statement Section */
    .statement {
        background: var(--planted-purple);
        padding: 6rem 1.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .statement-inner {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .statement h2 {
        font-size: clamp(1.8rem, 6vw, 3.2rem);
        color: white;
        margin-bottom: 1.25rem;
        line-height: 1.1;
    }

    .statement-highlight {
        color: var(--planted-green);
    }

    .statement p {
        font-size: clamp(1rem, 2.5vw, 1.15rem);
        color: rgba(255,255,255,0.8);
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .statement::before,
    .statement::after {
        content: '';
        position: absolute;
        border-radius: 50%;
        background: rgba(255,255,255,0.03);
        pointer-events: none;
    }

    .statement::before {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -100px;
    }

    .statement::after {
        width: 300px;
        height: 300px;
        bottom: -150px;
        left: -50px;
    }

    /* Products Section */
    .products {
        background: var(--planted-cream);
        padding: 5rem 0 4rem;
        overflow: hidden;
    }

    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 0 1.5rem 2.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .products-header h2 {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        color: var(--planted-purple);
        font-weight: 700;
        line-height: 1;
    }

    .products-header .all-products-btn {
        display: none;
        align-items: center;
        gap: 0.5rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-weight: 700;
        font-size: 0.85rem;
        padding: 0.9rem 1.5rem;
        border-radius: 0.75rem;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .products-header .all-products-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(107, 191, 89, 0.4);
    }

    .products-carousel {
        position: relative;
        padding: 0 1.5rem;
    }

    .products-scroll {
        display: flex;
        gap: 1.25rem;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        padding-bottom: 1rem;
    }

    .products-scroll::-webkit-scrollbar {
        display: none;
    }

    .products-scroll .product-card {
        flex: 0 0 260px;
        scroll-snap-align: start;
        text-decoration: none;
    }

    .products-scroll .product-card-inner {
        position: relative;
        border-radius: 1.25rem;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 0.75rem;
    }

    /* Product card color backgrounds are defined in global.css */

    .products-scroll .product-badge-new {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.3rem 0.6rem;
        border-radius: 100px;
        z-index: 10;
    }

    .products-scroll .product-grid-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
        pointer-events: none;
    }

    .products-scroll .product-grid-overlay img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .products-scroll .product-card:hover .product-grid-overlay {
        opacity: 1;
    }

    .products-scroll .product-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        left: 0;
        padding: 1.25rem;
        transition: opacity 0.4s ease, transform 0.4s ease;
        z-index: 2;
    }

    .products-scroll .product-image-pack {
        opacity: 1;
    }

    .products-scroll .product-image-dish {
        opacity: 0;
    }

    .products-scroll .product-card:hover .product-image-pack {
        opacity: 0;
        transform: scale(0.95);
    }

    .products-scroll .product-card:hover .product-image-dish {
        opacity: 1;
    }

    .products-scroll .product-image img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .products-scroll .product-info {
        text-align: center;
        padding: 0 0.25rem;
    }

    .products-scroll .product-name {
        font-family: 'VC Henrietta', serif;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--planted-purple);
        margin-bottom: 0.1rem;
    }

    .products-scroll .product-variant {
        color: var(--planted-purple);
        font-size: 0.85rem;
        opacity: 0.7;
    }

    .products-scroll .product-card {
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .products-scroll .product-card:hover {
        transform: translateY(-6px);
    }

    /* ============================================
       GROWING CAROUSEL - Playful Plant Navigation
       ============================================ */
    
    .growing-nav {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: 2.5rem;
        padding: 0 1rem;
    }

    /* Beckoning Hand Buttons */
    .nav-hand {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        transition: transform 0.3s ease;
    }

    .nav-hand:hover {
        transform: scale(1.1);
    }

    .nav-hand:active {
        transform: scale(0.95);
    }

    .hand-icon {
        width: 48px;
        height: 48px;
        filter: drop-shadow(0 2px 4px rgba(97, 38, 158, 0.2));
    }

    /* Beckoning animation - fingers curl inward */
