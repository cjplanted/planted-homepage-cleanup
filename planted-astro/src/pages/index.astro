---
import Layout from '../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
const base = import.meta.env.BASE_URL;

const products = await getCollection('products');
const featuredProducts = products
    .sort((a, b) => a.data.order - b.data.order);

const recipes = await getCollection('recipes');
const featuredRecipes = recipes
    .sort((a, b) => a.data.order - b.data.order)
    .slice(0, 4);

const settings = await getEntry('settings', 'global');
---

<Layout title="Planted ‚Äì Approved by Meat Lovers">
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-video-wrapper">
            <div class="hero-video-container" id="heroVideo">
                <video class="hero-video" autoplay muted loop playsinline>
                    <source src={`${base}/video/hero.mp4`} type="video/mp4">
                </video>
            </div>
        </div>

        <div class="hero-content" id="heroContent">
            <h1>{settings?.data.heroTitle}</h1>
            <p class="hero-subtitle">{settings?.data.heroSubtitle}</p>
            <div class="hero-buttons">
                <a href="#locator" class="btn btn-primary">
                    <span>üìç</span> Find Near You
                </a>
                <a href="#products" class="btn btn-secondary">
                    See Our Products
                </a>
            </div>
        </div>
    </section>

    <!-- Statement Section -->
    <section class="statement">
        <div class="statement-inner">
            <h2 class="reveal">
                {settings?.data.statementTitle}
                <span class="statement-highlight">{settings?.data.statementHighlight}</span>
            </h2>
            <p class="reveal reveal-delay-1">{settings?.data.statementSubtitle}</p>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
        <div class="products-header">
            <h2 class="reveal">Our highlights</h2>
            <a href={`${base}/products`} class="all-products-btn reveal">
                ‚Üí All Products
            </a>
        </div>

        <div class="products-carousel">
            <div class="products-scroll" id="productsScroll">
                {featuredProducts.map((product) => (
                    <a href={`${base}/products/${product.data.slug}`} class="product-card reveal-scale" data-color={product.data.color}>
                        <div class="product-card-inner">
                            {product.data.isNew && <span class="product-badge-new">New</span>}
                            {product.data.images.background && (
                                <div class="product-grid-overlay">
                                    <img src={product.data.images.background} alt="" loading="lazy">
                                </div>
                            )}
                            <div class="product-image product-image-pack">
                                <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`} loading="lazy">
                            </div>
                            {product.data.images.dish && (
                                <div class="product-image product-image-dish">
                                    <img src={product.data.images.dish} alt={`${product.data.name} ${product.data.variant} dish`} loading="lazy">
                                </div>
                            )}
                        </div>
                        <div class="product-info">
                            <div class="product-name">{product.data.name}</div>
                            <div class="product-variant">{product.data.variant}</div>
                        </div>
                    </a>
                ))}
            </div>
        </div>

        <!-- Carousel Pagination -->
        <div class="carousel-pagination">
            <button class="carousel-arrow" id="carouselPrev" aria-label="Previous">‚Üê</button>
            <div class="carousel-dots" id="carouselDots">
                {featuredProducts.map((_, index) => (
                    <div class={`carousel-dot ${index === 0 ? 'active' : ''}`} data-index={index}></div>
                ))}
            </div>
            <button class="carousel-arrow" id="carouselNext" aria-label="Next">‚Üí</button>
        </div>
        <div class="carousel-count">
            <span id="carouselCurrent">1</span> / <span>{featuredProducts.length}</span>
        </div>
    </section>

    <!-- Impact Section - Immersive Full-Width -->
    <section class="impact" id="impact">
        <!-- Background: Mountain landscape -->
        <div class="impact-bg">
            <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1800&q=80" alt="Mountain landscape with morning mist" loading="lazy">
        </div>

        <div class="impact-content">
            <!-- Top headline -->
            <h2 class="impact-headline">Every bite makes a difference</h2>

            <!-- The big stats -->
            <div class="impact-stats">
                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactCO2}>0<span>%</span></div>
                    <div class="impact-stat-label">Less CO‚ÇÇ</div>
                </div>

                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactWater}>0<span>%</span></div>
                    <div class="impact-stat-label">Less Water</div>
                </div>

                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactAnimals}>0</div>
                    <div class="impact-stat-label">Animals</div>
                </div>
            </div>

            <!-- Brand tagline -->
            <p class="impact-tagline">Same experience. Better meat.</p>

            <!-- Source citation -->
            <p class="impact-source">Compared to conventional beef. Verified by independent LCA.</p>

            <!-- Call to action -->
            <div class="impact-cta">
                <a href={`${base}/our-story`}>
                    Explore our impact
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Recipes Section -->
    <section class="recipes-section" id="recipes">
        <div class="recipes-header">
            <h2 class="reveal">Get cooking</h2>
            <a href={`${base}/recipes`} class="reveal">All 150+ recipes ‚Üí</a>
        </div>

        <div class="recipes-scroll">
            {featuredRecipes.map((recipe) => (
                <a href={`${base}/recipes/${recipe.data.slug}`} class="recipe-card">
                    <div class="recipe-image">
                        <img src={recipe.data.image} alt={recipe.data.title} loading="lazy">
                    </div>
                    <div class="recipe-info">
                        <div class="recipe-title">{recipe.data.title}</div>
                        <div class="recipe-meta">{recipe.data.cookTime} min ‚Ä¢ {recipe.data.difficulty}</div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <!-- Store Locator -->
    <section class="locator" id="locator">
        <div class="locator-content">
            <h2 class="reveal">{settings?.data.locatorTitle}</h2>
            <p class="reveal reveal-delay-1">{settings?.data.locatorSubtitle}</p>

            <div class="locator-search reveal reveal-delay-2">
                <input type="text" placeholder="Enter city or postcode">
                <button>Search</button>
            </div>

            <div class="retailers">
                {settings?.data.retailers?.map((retailer) => (
                    <span class="retailer reveal-scale">{retailer}</span>
                ))}
            </div>
        </div>
    </section>

    <!-- Business Section -->
    <section class="business" id="business">
        <div class="business-inner">
            <div>
                <span class="business-badge reveal">{settings?.data.businessBadge}</span>
                <h2 class="reveal">{settings?.data.businessTitle}</h2>
                <p class="reveal reveal-delay-1">{settings?.data.businessSubtitle}</p>
                <a href="#" class="business-cta reveal reveal-delay-2">
                    Get Samples ‚Üí
                </a>
            </div>

            <div class="business-stats">
                {settings?.data.businessStats?.map((stat) => (
                    <div class="business-stat reveal-scale">
                        <div class="business-stat-value">{stat.value}</div>
                        <div class="business-stat-label">{stat.label}</div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Hero Section */
    .hero {
        min-height: 100vh;
        min-height: 100dvh;
        background: var(--planted-cream);
        padding: 4rem 1.5rem 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-video-wrapper {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-video-container {
        position: relative;
        width: 100%;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 25px 80px rgba(97, 38, 158, 0.15);
        transform: rotate(-3deg) scale(0.95);
        transition: box-shadow 0.3s ease;
        will-change: transform;
    }

    .hero-video-container::before {
        content: '';
        display: block;
        padding-top: 70%;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 3rem auto 0;
        text-align: center;
        opacity: 0;
        transform: translateY(40px);
    }

    .hero-content.animate-in {
        animation: fadeSlideUp 0.8s ease forwards;
        animation-delay: 0.3s;
    }

    @keyframes fadeSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero h1 {
        font-size: clamp(2.5rem, 11vw, 5.5rem);
        color: var(--planted-purple);
        margin-bottom: 1rem;
        line-height: 0.95;
    }

    .hero-subtitle {
        font-size: clamp(1rem, 3vw, 1.25rem);
        color: var(--planted-black);
        opacity: 0.7;
        max-width: 480px;
        margin: 0 auto 2rem;
        line-height: 1.5;
    }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }

    /* Statement Section */
    .statement {
        background: var(--planted-purple);
        padding: 6rem 1.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .statement-inner {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .statement h2 {
        font-size: clamp(1.8rem, 6vw, 3.2rem);
        color: white;
        margin-bottom: 1.25rem;
        line-height: 1.1;
    }

    .statement-highlight {
        color: var(--planted-green);
    }

    .statement p {
        font-size: clamp(1rem, 2.5vw, 1.15rem);
        color: rgba(255,255,255,0.8);
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .statement::before,
    .statement::after {
        content: '';
        position: absolute;
        border-radius: 50%;
        background: rgba(255,255,255,0.03);
        pointer-events: none;
    }

    .statement::before {
        width: 400px;
        height: 400px;
        top: -200px;
        right: -100px;
    }

    .statement::after {
        width: 300px;
        height: 300px;
        bottom: -150px;
        left: -50px;
    }

    /* Products Section */
    .products {
        background: var(--planted-cream);
        padding: 5rem 0 4rem;
        overflow: hidden;
    }

    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 0 1.5rem 2.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .products-header h2 {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        color: var(--planted-purple);
        font-style: italic;
        font-weight: 700;
        line-height: 1;
    }

    .products-header .all-products-btn {
        display: none;
        align-items: center;
        gap: 0.5rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-weight: 700;
        font-size: 0.85rem;
        padding: 0.9rem 1.5rem;
        border-radius: 0.75rem;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .products-header .all-products-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(107, 191, 89, 0.4);
    }

    .products-carousel {
        position: relative;
        padding: 0 1.5rem;
    }

    .products-scroll {
        display: flex;
        gap: 1.25rem;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        padding-bottom: 1rem;
    }

    .products-scroll::-webkit-scrollbar {
        display: none;
    }

    .products-scroll .product-card {
        flex: 0 0 260px;
        scroll-snap-align: start;
        text-decoration: none;
    }

    .products-scroll .product-card-inner {
        position: relative;
        border-radius: 1.25rem;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 0.75rem;
    }

    /* Product card color backgrounds are defined in global.css */

    .products-scroll .product-badge-new {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.3rem 0.6rem;
        border-radius: 100px;
        z-index: 10;
    }

    .products-scroll .product-grid-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
        pointer-events: none;
    }

    .products-scroll .product-grid-overlay img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .products-scroll .product-card:hover .product-grid-overlay {
        opacity: 1;
    }

    .products-scroll .product-image {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        left: 0;
        padding: 1.25rem;
        transition: opacity 0.4s ease, transform 0.4s ease;
        z-index: 2;
    }

    .products-scroll .product-image-pack {
        opacity: 1;
    }

    .products-scroll .product-image-dish {
        opacity: 0;
    }

    .products-scroll .product-card:hover .product-image-pack {
        opacity: 0;
        transform: scale(0.95);
    }

    .products-scroll .product-card:hover .product-image-dish {
        opacity: 1;
    }

    .products-scroll .product-image img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }

    .products-scroll .product-info {
        text-align: center;
        padding: 0 0.25rem;
    }

    .products-scroll .product-name {
        font-family: 'VC Henrietta', serif;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--planted-purple);
        margin-bottom: 0.1rem;
    }

    .products-scroll .product-variant {
        color: var(--planted-purple);
        font-size: 0.85rem;
        opacity: 0.7;
    }

    .products-scroll .product-card {
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .products-scroll .product-card:hover {
        transform: translateY(-6px);
    }

    .carousel-pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 2rem;
        padding: 0 1.5rem;
    }

    .carousel-arrow {
        background: none;
        border: none;
        color: var(--planted-purple);
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.5rem;
        opacity: 0.6;
        transition: opacity 0.3s;
    }

    .carousel-arrow:hover {
        opacity: 1;
    }

    .carousel-dots {
        display: flex;
        gap: 0.4rem;
    }

    .carousel-dot {
        width: 12px;
        height: 4px;
        background: var(--planted-purple);
        border-radius: 2px;
        opacity: 0.3;
        transition: opacity 0.3s, width 0.3s;
    }

    .carousel-dot.active {
        background: var(--planted-green);
        opacity: 1;
        width: 20px;
    }

    .carousel-count {
        text-align: center;
        margin-top: 0.75rem;
        font-size: 0.85rem;
        color: var(--planted-purple);
        opacity: 0.6;
        font-weight: 600;
    }

    /* Hide dots on mobile when many products, show count instead */
    @media (max-width: 640px) {
        .carousel-dots {
            max-width: 200px;
            overflow: hidden;
        }
        .carousel-dot {
            width: 8px;
            height: 3px;
        }
        .carousel-dot.active {
            width: 16px;
        }
    }

    /* ============================================
       IMPACT SECTION - Immersive Full-Width
       ============================================ */

    .impact {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        width: 100%;
    }

    /* Background image */
    .impact-bg {
        position: absolute;
        inset: 0;
    }

    .impact-bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        animation: slowZoom 30s ease-in-out infinite alternate;
    }

    @keyframes slowZoom {
        0% { transform: scale(1); }
        100% { transform: scale(1.08); }
    }

    /* Purple gradient overlay */
    .impact-bg::after {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(97, 38, 158, 0.65) 0%,
            rgba(74, 29, 122, 0.8) 50%,
            rgba(61, 24, 102, 0.9) 100%
        );
    }

    /* Content container */
    .impact-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 5rem 2rem;
        max-width: 1200px;
        width: 100%;
    }

    /* Top headline */
    .impact-headline {
        font-size: clamp(1.25rem, 3.5vw, 2rem);
        color: rgba(255,255,255,0.75);
        font-weight: 400;
        font-family: 'Galano Grotesque', sans-serif;
        margin-bottom: 3.5rem;
        letter-spacing: 0.02em;
        opacity: 0;
        transform: translateY(20px);
    }

    .impact-headline.active {
        animation: impactFadeSlideUp 0.8s ease forwards;
        animation-delay: 0.2s;
    }

    @keyframes impactFadeSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Stats row */
    .impact-stats {
        display: flex;
        justify-content: center;
        gap: clamp(2.5rem, 8vw, 6rem);
        margin-bottom: 3.5rem;
        flex-wrap: wrap;
    }

    .impact-stat {
        text-align: center;
        opacity: 0;
        transform: translateY(30px);
    }

    .impact-stat.active {
        animation: impactFadeSlideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .impact-stat.active:nth-child(1) { animation-delay: 0.4s; }
    .impact-stat.active:nth-child(2) { animation-delay: 0.55s; }
    .impact-stat.active:nth-child(3) { animation-delay: 0.7s; }

    /* The big numbers */
    .impact-stat-value {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(5rem, 18vw, 12rem);
        color: white;
        line-height: 0.8;
        letter-spacing: -0.03em;
        text-shadow:
            0 4px 0 rgba(0,0,0,0.05),
            0 8px 30px rgba(0,0,0,0.2);
        position: relative;
    }

    /* Green percent sign */
    .impact-stat-value span {
        color: var(--planted-green);
        text-shadow:
            0 0 40px rgba(107, 191, 89, 0.4),
            0 4px 0 rgba(0,0,0,0.05);
    }

    /* Labels below numbers */
    .impact-stat-label {
        font-size: clamp(0.65rem, 1.5vw, 0.85rem);
        text-transform: uppercase;
        letter-spacing: 0.2em;
        color: rgba(255,255,255,0.5);
        margin-top: 0.75rem;
        font-weight: 600;
    }

    /* Tagline */
    .impact-tagline {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(1.75rem, 5vw, 3.5rem);
        color: white;
        margin-bottom: 0.75rem;
        opacity: 0;
        transform: translateY(20px);
    }

    .impact-tagline.active {
        animation: impactFadeSlideUp 0.8s ease forwards;
        animation-delay: 0.9s;
    }

    /* Source text */
    .impact-source {
        font-size: clamp(0.7rem, 1.2vw, 0.85rem);
        color: rgba(255,255,255,0.4);
        font-style: italic;
        margin-bottom: 2.5rem;
        opacity: 0;
    }

    .impact-source.active {
        animation: impactFadeSlideUp 0.8s ease forwards;
        animation-delay: 1s;
    }

    /* CTA Button */
    .impact-cta {
        opacity: 0;
        transform: translateY(20px);
    }

    .impact-cta.active {
        animation: impactFadeSlideUp 0.8s ease forwards;
        animation-delay: 1.1s;
    }

    .impact-cta a {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        background: var(--planted-green);
        color: var(--planted-black);
        padding: 1.15rem 2.5rem;
        border-radius: 100px;
        font-weight: 700;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        box-shadow: 0 4px 20px rgba(107, 191, 89, 0.3);
    }

    .impact-cta a:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 16px 40px rgba(107, 191, 89, 0.4);
    }

    .impact-cta a svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .impact-cta a:hover svg {
        transform: translateX(4px);
    }

    /* Impact section mobile responsive */
    @media (max-width: 600px) {
        .impact-stats {
            gap: 2rem;
        }

        .impact-stat-value {
            font-size: clamp(4rem, 22vw, 6rem);
        }

        .impact-content {
            padding: 4rem 1.5rem;
        }
    }

    /* For very small screens, stack stats vertically */
    @media (max-width: 400px) {
        .impact-stats {
            flex-direction: column;
            gap: 2.5rem;
        }
    }

    /* Recipes Section */
    .recipes-section {
        background: var(--planted-cream);
        padding: 6rem 0;
    }

    .recipes-header {
        padding: 0 1.5rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1100px;
        margin: 0 auto;
    }

    .recipes-header h2 {
        font-size: clamp(1.8rem, 7vw, 3rem);
        color: var(--planted-purple);
        text-transform: uppercase;
    }

    .recipes-header a {
        color: var(--planted-purple);
        font-weight: 700;
        text-decoration: none;
        font-size: 0.9rem;
