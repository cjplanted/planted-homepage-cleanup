<script>
    function initHomePage() {
        // Hero video scroll transform (Apple-style)
        const heroVideo = document.getElementById('heroVideo');
        const heroContent = document.getElementById('heroContent');

        // Trigger hero content animation on load
        heroContent?.classList.add('animate-in');

        let ticking = false;

        function updateVideoTransform() {
            const scrollY = window.scrollY;
            const windowHeight = window.innerHeight;

            // Calculate scroll progress (0 to 1 for first viewport)
            const progress = Math.min(scrollY / (windowHeight * 0.6), 1);

            // Video: rotate from -3deg to 0deg, scale from 0.95 to 1
            const rotation = -3 + (progress * 3);
            const scale = 0.95 + (progress * 0.05);
            const translateY = progress * -20;

            if (heroVideo) {
                heroVideo.style.transform = `rotate(${rotation}deg) scale(${scale}) translateY(${translateY}px)`;

                // Add shadow depth as it straightens
                const shadowOpacity = 0.15 + (progress * 0.1);
                const shadowBlur = 25 + (progress * 30);
                heroVideo.style.boxShadow = `0 ${25 + progress * 15}px ${shadowBlur}px rgba(97, 38, 158, ${shadowOpacity})`;
            }

            ticking = false;
        }

        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateVideoTransform);
                ticking = true;
            }
        });

        updateVideoTransform();

        // ============================================
        // IMPACT SECTION ANIMATIONS
        // ============================================
        const impactSection = document.getElementById('impact');
        const impactElements = document.querySelectorAll('.impact-headline, .impact-stat, .impact-tagline, .impact-source, .impact-cta');
        const statValues = document.querySelectorAll('.impact-stat-value[data-count]');
        let impactAnimated = false;

        const impactObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !impactAnimated) {
                    impactAnimated = true;
                    // Trigger all impact animations
                    impactElements.forEach(el => el.classList.add('active'));
                    // Animate counters
                    animateCounters();
                }
            });
        }, { threshold: 0.3 });

        if (impactSection) {
            impactObserver.observe(impactSection);
        }

        function animateCounters() {
            statValues.forEach(stat => {
                const target = parseInt((stat as HTMLElement).dataset.count || '0');
                const duration = 1500;
                const start = performance.now();
                const hasPercent = stat.querySelector('span') !== null;

                function updateCounter(currentTime: number) {
                    const elapsed = currentTime - start;
                    const progress = Math.min(elapsed / duration, 1);

                    // Easing function (ease-out)
                    const easeOut = 1 - Math.pow(1 - progress, 3);
                    const current = Math.round(easeOut * target);

                    if (target === 0) {
                        stat.textContent = '0';
                    } else if (hasPercent) {
                        stat.innerHTML = current + '<span>%</span>';
                    } else {
                        stat.textContent = current + '%';
                    }

                    if (progress < 1) {
                        requestAnimationFrame(updateCounter);
                    }
                }

                requestAnimationFrame(updateCounter);
            });
        }

        // Products carousel
        const productsScroll = document.getElementById('productsScroll');
        const carouselDots = document.querySelectorAll('.carousel-dot');

        function scrollProducts(direction: number) {
            const card = productsScroll?.querySelector('.product-card');
            if (card && productsScroll) {
                const cardWidth = (card as HTMLElement).offsetWidth + 24;
                productsScroll.scrollBy({
                    left: direction * cardWidth,
                    behavior: 'smooth'
                });
            }
        }

        document.getElementById('carouselPrev')?.addEventListener('click', () => scrollProducts(-1));
        document.getElementById('carouselNext')?.addEventListener('click', () => scrollProducts(1));

        // Update dots and counter on scroll
        const carouselCurrent = document.getElementById('carouselCurrent');

        productsScroll?.addEventListener('scroll', () => {
            const card = productsScroll.querySelector('.product-card');
            if (card) {
                const cardWidth = (card as HTMLElement).offsetWidth + 24;
                const activeIndex = Math.round(productsScroll.scrollLeft / cardWidth);

                carouselDots.forEach((dot, index) => {
                    dot.classList.toggle('active', index === activeIndex);
                });

                // Update counter
                if (carouselCurrent) {
                    carouselCurrent.textContent = String(activeIndex + 1);
                }
            }
        });

        // Touch swipe support for carousel
        let touchStartX = 0;
        let touchEndX = 0;

        productsScroll?.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });

        productsScroll?.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            const diff = touchStartX - touchEndX;
            if (Math.abs(diff) > 50) {
                scrollProducts(diff > 0 ? 1 : -1);
            }
        }, { passive: true });
    }

    // Initialize on page load
    initHomePage();

    // Re-initialize after View Transitions navigation
    document.addEventListener('astro:page-load', initHomePage);
</script>
