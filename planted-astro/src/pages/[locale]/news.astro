---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { allLocales, locales, type LocaleCode } from '../../i18n/config';
import { getTranslations } from '../../i18n/index';

export async function getStaticPaths() {
    return allLocales.map((locale) => ({
        params: { locale },
        props: { locale },
    }));
}

const { locale } = Astro.props as { locale: LocaleCode };
const base = import.meta.env.BASE_URL;
const t = getTranslations(locale);
const localeData = locales[locale];

const news = await getCollection('news');
const sortedNews = news.sort((a, b) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const featuredNews = sortedNews.filter(article => article.data.featured);
const regularNews = sortedNews.filter(article => !article.data.featured);

// Category colors
const categoryColors: Record<string, string> = {
    partnership: 'purple',
    product: 'green',
    company: 'orange',
    sustainability: 'teal',
    campaign: 'pink'
};
---

<Layout title={`${t.news.pageTitle} â€“ Planted`} description={t.news.hero.subtitle} currentPage="news" locale={locale}>
    <section class="hero">
        <span class="hero-badge reveal">{t.news.hero.title}</span>
        <h1 class="reveal">{t.news.hero.whatsGrowing.split(' ')[0]} <span>{t.news.hero.whatsGrowing.split(' ').slice(1).join(' ') || 'growing'}</span></h1>
        <p class="reveal">{t.news.hero.subtitle}</p>
    </section>

    {featuredNews.length > 0 && (
        <section class="featured-section">
            <div class="featured-grid">
                {featuredNews.map((article) => (
                    <article class="featured-card reveal-scale">
                        <a href={`${base}/${locale}/news/${article.data.slug}`} class="featured-link">
                            <div class="featured-image">
                                <img src={article.data.image} alt={article.data.title} loading="lazy" />
                                <span class={`category-badge ${categoryColors[article.data.category] || 'purple'}`}>
                                    {article.data.category}
                                </span>
                            </div>
                            <div class="featured-content">
                                <time datetime={article.data.date}>
                                    {new Date(article.data.date).toLocaleDateString(localeData.language, { year: 'numeric', month: 'long', day: 'numeric' })}
                                </time>
                                <h2>{article.data.title}</h2>
                                <p>{article.data.excerpt}</p>
                                <span class="read-more">
                                    {t.common.readMore}
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                        <path d="M5 12h14M12 5l7 7-7 7"/>
                                    </svg>
                                </span>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        </section>
    )}

    <section class="news-grid-section">
        <div class="section-header reveal">
            <h2>{t.news.allNews}</h2>
            <div class="category-filters">
                <button class="filter-btn active" data-filter="all">{t.news.filters.all}</button>
                <button class="filter-btn" data-filter="product">{t.news.filters.products}</button>
                <button class="filter-btn" data-filter="partnership">{t.news.filters.partnerships}</button>
                <button class="filter-btn" data-filter="sustainability">{t.news.filters.sustainability}</button>
                <button class="filter-btn" data-filter="company">{t.news.filters.company}</button>
            </div>
        </div>

        <div class="news-grid">
            {regularNews.map((article) => (
                <a href={`${base}/${locale}/news/${article.data.slug}`} class="news-card reveal" data-category={article.data.category}>
                    <div class="news-image">
                        <img src={article.data.image} alt={article.data.title} loading="lazy" />
                    </div>
                    <div class="news-content">
                        <div class="news-meta">
                            <span class={`category ${categoryColors[article.data.category] || 'purple'}`}>
                                {article.data.category}
                            </span>
                            <time datetime={article.data.date}>
                                {new Date(article.data.date).toLocaleDateString(localeData.language, { year: 'numeric', month: 'short', day: 'numeric' })}
                            </time>
                        </div>
                        <h3>{article.data.title}</h3>
                        <p>{article.data.excerpt}</p>
                    </div>
                </a>
            ))}
        </div>
    </section>

    {sortedNews.length === 0 && (
        <section class="empty-state">
            <p>No news articles yet. Check back soon!</p>
        </section>
    )}

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-inner reveal">
            <h2>{t.newsletter.title}</h2>
            <p>{t.newsletter.description}</p>
            <a href="#" class="btn btn-green">{t.newsletter.button}</a>
        </div>
    </section>
</Layout>

<script>
    function initNewsFilters() {
        const filterBtns = document.querySelectorAll('.filter-btn');
        const newsCards = document.querySelectorAll('.news-card') as NodeListOf<HTMLElement>;

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Update active state
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                const filter = (btn as HTMLElement).dataset.filter || 'all';

                // Filter cards with animation
                newsCards.forEach(card => {
                    const category = card.dataset.category || '';

                    if (filter === 'all' || category === filter) {
                        card.style.display = '';
                        card.classList.remove('hidden');
                    } else {
                        card.classList.add('hidden');
                        setTimeout(() => {
                            if (card.classList.contains('hidden')) {
                                card.style.display = 'none';
                            }
                        }, 300);
                    }
                });
            });
        });
    }

    initNewsFilters();
    document.addEventListener('astro:page-load', initNewsFilters);
</script>

<style>
    .hero {
        padding: 8rem 1.5rem 4rem;
        text-align: center;
        background: var(--planted-purple);
        color: white;
    }

    .hero-badge {
        display: inline-block;
        background: rgba(107, 191, 89, 0.2);
        border: 1px solid rgba(107, 191, 89, 0.3);
        color: var(--planted-green);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        margin-bottom: 1.5rem;
    }

    .hero h1 {
        font-size: clamp(3rem, 10vw, 5rem);
        margin-bottom: 1rem;
        line-height: 0.95;
    }

    .hero h1 span {
        color: var(--planted-green);
    }

    .hero p {
        font-size: 1.15rem;
        opacity: 0.9;
        max-width: 500px;
        margin: 0 auto;
    }

    .featured-section {
        padding: 4rem 1.5rem;
        background: white;
    }

    .featured-grid {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        gap: 2rem;
    }

    .featured-card {
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .featured-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(0,0,0,0.12);
    }

    .featured-link {
        display: grid;
        text-decoration: none;
        color: inherit;
    }

    .featured-image {
        position: relative;
        aspect-ratio: 16/9;
    }

    .featured-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .category-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        padding: 0.4rem 0.8rem;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .category-badge.purple { background: var(--planted-purple); color: white; }
    .category-badge.green { background: var(--planted-green); color: var(--planted-black); }
    .category-badge.orange { background: #F5A623; color: white; }
    .category-badge.teal { background: #2AA198; color: white; }
    .category-badge.pink { background: #E91E8C; color: white; }

    .featured-content {
        padding: 2rem;
    }

    .featured-content time {
        font-size: 0.85rem;
        opacity: 0.6;
    }

    .featured-content h2 {
        font-size: clamp(1.5rem, 4vw, 2rem);
        color: var(--planted-purple);
        margin: 0.5rem 0 1rem;
        line-height: 1.2;
    }

    .featured-content p {
        opacity: 0.7;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: var(--planted-purple);
    }

    .read-more svg {
        width: 16px;
        height: 16px;
        transition: transform 0.2s ease;
    }

    .featured-card:hover .read-more svg {
        transform: translateX(4px);
    }

    .news-grid-section {
        padding: 4rem 1.5rem;
        background: var(--planted-cream);
    }

    .section-header {
        max-width: 1200px;
        margin: 0 auto 2rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .section-header h2 {
        font-size: clamp(1.5rem, 4vw, 2rem);
        color: var(--planted-purple);
    }

    .category-filters {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .filter-btn {
        padding: 0.5rem 1rem;
        border: 1px solid var(--planted-purple);
        border-radius: 100px;
        background: transparent;
        color: var(--planted-purple);
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .filter-btn:hover {
        background: rgba(97, 38, 158, 0.1);
    }

    .filter-btn.active {
        background: var(--planted-purple);
        color: white;
    }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .news-card {
        background: white;
        border-radius: 1.25rem;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease, box-shadow 0.3s ease, opacity 0.3s ease;
    }

    .news-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 30px rgba(0,0,0,0.1);
    }

    .news-card.hidden {
        opacity: 0;
        transform: scale(0.95);
    }

    .news-image {
        aspect-ratio: 16/10;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .news-content {
        padding: 1.5rem;
    }

    .news-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 0.75rem;
    }

    .category {
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .category.purple { background: rgba(97, 38, 158, 0.1); color: var(--planted-purple); }
    .category.green { background: rgba(107, 191, 89, 0.2); color: #3a7d2a; }
    .category.orange { background: rgba(245, 166, 35, 0.2); color: #b37a1a; }
    .category.teal { background: rgba(42, 161, 152, 0.2); color: #1e7971; }
    .category.pink { background: rgba(233, 30, 140, 0.2); color: #b5156b; }

    .news-meta time {
        font-size: 0.8rem;
        opacity: 0.6;
    }

    .news-content h3 {
        font-size: 1.1rem;
        color: var(--planted-purple);
        margin-bottom: 0.5rem;
        line-height: 1.3;
    }

    .news-content p {
        font-size: 0.9rem;
        opacity: 0.7;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .empty-state {
        padding: 4rem 1.5rem;
        text-align: center;
        opacity: 0.6;
    }

    .cta-section {
        padding: 5rem 1.5rem;
        background: var(--planted-purple);
        color: white;
        text-align: center;
    }

    .cta-inner {
        max-width: 500px;
        margin: 0 auto;
    }

    .cta-inner h2 {
        font-size: clamp(2rem, 6vw, 3rem);
        margin-bottom: 1rem;
    }

    .cta-inner p {
        opacity: 0.9;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .section-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }

        .featured-link {
            grid-template-columns: 1fr 1fr;
        }
    }
</style>
