---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import { allLocales, locales, type LocaleCode, type CountryCode, getLocalizedProductName, getAmbassadorForLocale } from '../../i18n/config';
import { getTranslations } from '../../i18n/index';
import StoreLocator from '../../components/StoreLocator.astro';
import NewsletterSignup from '../../components/NewsletterSignup.astro';
import DeliveryFinder from '../../components/DeliveryFinder.astro';

export async function getStaticPaths() {
    return allLocales.map((locale) => ({
        params: { locale },
        props: { locale },
    }));
}

const { locale } = Astro.props as { locale: LocaleCode };
const base = import.meta.env.BASE_URL;
const t = getTranslations(locale);
const localeData = locales[locale];

const products = await getCollection('products');
const featuredProducts = products.sort((a, b) => a.data.order - b.data.order);

const recipes = await getCollection('recipes');
const featuredRecipes = recipes.sort((a, b) => a.data.order - b.data.order).slice(0, 4);

const settings = await getEntry('settings', 'global');

// Get ambassador for this locale's country (if any)
const ambassador = getAmbassadorForLocale(locale);
const ambassadorTitle = ambassador ? (localeData.language === 'en' ? ambassador.titleEn : ambassador.title) : '';
const ambassadorQuote = ambassador ? (localeData.language === 'en' ? ambassador.quoteEn : ambassador.quote) : '';
---

<Layout title={`Planted – ${t.home.hero.subtitle}`} locale={locale}>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-video-wrapper">
            <div class="hero-video-container" id="heroVideo">
                <video class="hero-video" autoplay muted loop playsinline>
                    <source src={`${base}/video/hero.mp4`} type="video/mp4">
                </video>
            </div>
            <!-- Approved by Meat Lovers claim - bridges video and content -->
            <div class="hero-approved-claim">
                <img src={`${base}/images/approvedclaim.svg`} alt="Approved by Meat Lovers" class="approved-svg" />
            </div>
        </div>

        <div class="hero-content" id="heroContent">
            <div class="hero-badge">{t.home.hero.badge}</div>
            <h1>{t.home.hero.title}</h1>
            <p class="hero-subtitle">{t.home.hero.subtitle}</p>
            <div class="hero-buttons">
                <a href="#locator" class="btn btn-primary">
                    {t.nav.findUs}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="btn-icon">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                        <circle cx="12" cy="10" r="3"/>
                    </svg>
                </a>
                <a href="#products" class="btn btn-secondary">
                    {t.home.products.viewAll}
                </a>
            </div>
        </div>

        <!-- Trust indicators -->
        <div class="hero-trust">
            <span class="trust-item">{t.home.trust.swissMade}</span>
            <span class="trust-divider"></span>
            <span class="trust-item">{t.home.trust.restaurants}</span>
            <span class="trust-divider"></span>
            <span class="trust-item">{t.home.trust.countries}</span>
        </div>
    </section>

    <!-- Statement Section -->
    <section class="statement">
        <div class="statement-inner">
            <h2 class="reveal">
                {t.home.mission.title}
                <span class="statement-highlight">{t.home.mission.highlight}</span>
            </h2>
            <p class="reveal reveal-delay-1">{t.home.mission.text}</p>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
        <div class="products-header">
            <h2 class="reveal">{t.home.products.title}</h2>
            <a href={`${base}/${locale}/products`} class="all-products-btn reveal">
                → {t.home.products.viewAll}
            </a>
        </div>

        <div class="products-carousel">
            <div class="products-scroll" id="productsScroll">
                {featuredProducts.map((product) => (
                    <a href={`${base}/${locale}/products/${product.data.slug}`} class="product-card reveal-scale" data-color={product.data.color}>
                        <div class="product-card-inner">
                            {product.data.isNew && <span class="product-badge-new">{t.common.new}</span>}
                            {product.data.images.hover && (
                                <div class="product-hover-image">
                                    <img src={product.data.images.hover} alt="" loading="lazy">
                                </div>
                            )}
                            <div class="product-pack-image">
                                <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`} loading="lazy">
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-name">{getLocalizedProductName(product.data.name, locale)}</div>
                            <div class="product-variant">{product.data.variant}</div>
                        </div>
                    </a>
                ))}
            </div>
        </div>

        <!-- Simple Carousel Navigation -->
        <div class="carousel-nav">
            <button class="carousel-arrow carousel-prev" id="carouselPrev" aria-label="Previous">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            <div class="carousel-dots" id="carouselDots">
                {featuredProducts.map((_, index) => (
                    <button 
                        class={`carousel-dot ${index === 0 ? 'active' : ''}`} 
                        data-index={index}
                        aria-label={`Go to product ${index + 1}`}
                    ></button>
                ))}
            </div>

            <button class="carousel-arrow carousel-next" id="carouselNext" aria-label="Next">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    </section>

    <!-- Impact Section - Immersive Full-Width -->
    <section class="impact" id="impact">
        <!-- Abstract gradient background -->
        <div class="impact-bg">
            <div class="impact-gradient"></div>
            <div class="impact-pattern"></div>
        </div>

        <div class="impact-content">
            <!-- Playful intro badge -->
            <span class="impact-badge">{t.home.impact.badge}</span>

            <!-- The big stats -->
            <div class="impact-stats">
                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactCO2}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">{t.home.impact.lessCO2}</div>
                    <div class="impact-stat-compare">{t.home.impact.vsCow}</div>
                </div>

                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactWater}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">{t.home.impact.lessWater}</div>
                    <div class="impact-stat-compare">{t.home.impact.vsCow}</div>
                </div>

                <div class="impact-stat special">
                    <div class="impact-stat-value" data-count={settings?.data.impactAnimals}>0</div>
                    <div class="impact-stat-label">{t.home.impact.animalsHarmed}</div>
                    <div class="impact-stat-compare">{t.home.impact.ever}</div>
                </div>
            </div>

            <!-- Brand tagline -->
            <h2 class="impact-tagline">{t.home.impact.tagline}</h2>

            <!-- Source citation -->
            <p class="impact-source">{t.home.impact.source}</p>

            <!-- Call to action -->
            <div class="impact-cta">
                <a href={`${base}/${locale}/our-mission`} class="impact-btn">
                    {t.home.impact.seeHow}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Decorative floating elements -->
        <div class="impact-float float-1"></div>
        <div class="impact-float float-2"></div>
        <div class="impact-float float-3"></div>
    </section>

    <!-- Ambassador Section - Only shows if there's an ambassador for this country -->
    {ambassador && (
        <section class="ambassador" id="ambassador">
            <div class="ambassador-bg">
                <div class="ambassador-gradient"></div>
            </div>

            <div class="ambassador-content">
                <div class="ambassador-image-container reveal-scale">
                    <div class="ambassador-image-wrapper">
                        <img
                            src={`${base}${ambassador.image}`}
                            alt={ambassador.name}
                            class="ambassador-image"
                            loading="lazy"
                        />
                        <div class="ambassador-image-frame"></div>
                    </div>
                    <div class="ambassador-badge-container">
                        <span class="ambassador-badge">{t.home.ambassador.badge}</span>
                    </div>
                </div>

                <div class="ambassador-text reveal">
                    <div class="ambassador-quote-mark">"</div>
                    <blockquote class="ambassador-quote">
                        {ambassadorQuote}
                    </blockquote>
                    <div class="ambassador-attribution">
                        <div class="ambassador-name">{ambassador.name}</div>
                        <div class="ambassador-title">{ambassadorTitle}</div>
                    </div>
                    <div class="ambassador-approved">
                        <span class="approved-badge">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="approved-icon">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                                <polyline points="22 4 12 14.01 9 11.01"/>
                            </svg>
                            {t.home.ambassador.approvedBy} {ambassador.name.split(' ')[0]}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Decorative elements -->
            <div class="ambassador-float float-a1"></div>
            <div class="ambassador-float float-a2"></div>
        </section>
    )}

    <!-- Recipes Section -->
    <section class="recipes-section" id="recipes">
        <div class="recipes-header">
            <h2 class="reveal">{t.home.recipes.title}</h2>
            <a href={`${base}/${locale}/recipes`} class="reveal">{t.home.recipes.viewAll} →</a>
        </div>

        <div class="recipes-scroll">
            {featuredRecipes.map((recipe) => (
                <a href={`${base}/${locale}/recipes/${recipe.data.slug}`} class="recipe-card">
                    <div class="recipe-image">
                        <img src={recipe.data.image} alt={recipe.data.title} loading="lazy">
                    </div>
                    <div class="recipe-info">
                        <div class="recipe-title">{recipe.data.title}</div>
                        <div class="recipe-meta">{recipe.data.cookTime} {t.recipes.time} • {t.recipes.difficulty[recipe.data.difficulty.toLowerCase() as 'easy' | 'medium' | 'hard'] || recipe.data.difficulty}</div>
                    </div>
                </a>
            ))}
        </div>
    </section>

    <!-- Delivery Finder -->
    <DeliveryFinder
        locale={locale}
        country={localeData.country as CountryCode}
        translations={{
            title: t.home.delivery?.title || 'Order Planted Delivery',
            subtitle: t.home.delivery?.subtitle || 'Discover restaurants near you that deliver delicious Planted dishes.',
            orderNow: t.home.delivery?.orderNow || 'Order now',
            viewMenu: t.home.delivery?.viewMenu || 'View menu',
            allCities: t.home.delivery?.allCities || 'All cities',
            noResults: t.home.delivery?.noResults || 'No restaurants found in your area.',
            poweredBy: t.home.delivery?.poweredBy || 'Available via Wolt, Lieferando, Uber Eats, and more',
        }}
    />

    <!-- Store Locator -->
    <StoreLocator
        title={t.storeLocator.title}
        subtitle={t.storeLocator.subtitle}
        locale={locale}
        translations={{
            detecting: t.storeLocator.detecting,
            showingResults: t.storeLocator.showingResults,
            change: t.storeLocator.change,
            stores: t.storeLocator.tabs.stores,
            restaurants: t.storeLocator.tabs.restaurants,
            noRetail: t.storeLocator.noResults.retail,
            noFoodservice: t.storeLocator.noResults.foodservice,
            foodserviceIntro: t.storeLocator.foodserviceIntro,
            availableProducts: t.storeLocator.availableProducts,
            cantFind: t.storeLocator.online.badge,
            orderOnline: t.storeLocator.online.text,
            shopOnline: t.storeLocator.online.button,
        }}
    />

    <!-- Newsletter Signup -->
    <NewsletterSignup
        translations={{
            badge: t.newsletter.title,
            title: t.newsletter.subtitle,
            description: t.newsletter.description,
            placeholder: t.newsletter.placeholder,
            button: t.newsletter.button,
            consent: t.newsletter.consent,
            success: t.newsletter.success,
        }}
    />

    <!-- Business Section -->
    <section class="business" id="business">
        <div class="business-inner">
            <div>
                <span class="business-badge reveal">{t.home.business.badge}</span>
                <h2 class="reveal">{t.gastronomy.hero.title}</h2>
                <p class="reveal reveal-delay-1">{t.gastronomy.hero.subtitle}</p>
                <a href={`${base}/${locale}/gastronomy`} class="business-cta reveal reveal-delay-2">
                    {t.gastronomy.cta.samples} →
                </a>
            </div>

            <div class="business-stats">
                <div class="business-stat reveal-scale">
                    <div class="business-stat-value">{t.gastronomy.stats.restaurants}</div>
                    <div class="business-stat-label">{t.gastronomy.stats.restaurantsLabel}</div>
                </div>
                <div class="business-stat reveal-scale">
                    <div class="business-stat-value">{t.gastronomy.stats.countries}</div>
                    <div class="business-stat-label">{t.gastronomy.stats.countriesLabel}</div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Hero Section */
    .hero {
        min-height: 100vh;
        min-height: 100dvh;
        background: var(--planted-cream);
        padding: 4rem 1.5rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
    }

    .hero-video-wrapper {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0 auto;
    }

    .hero-video-container {
        position: relative;
        width: 100%;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 25px 80px rgba(97, 38, 158, 0.15);
        transform: rotate(-3deg) scale(0.95);
        transition: box-shadow 0.3s ease;
        will-change: transform;
    }

    .hero-video-container::before {
        content: '';
        display: block;
        padding-top: 70%;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Approved by Meat Lovers claim - bridges video and content */
    .hero-approved-claim {
        position: absolute;
        bottom: -3rem;
        right: 5%;
        width: clamp(140px, 22vw, 400px);
        transform: rotate(8deg);
        z-index: 20;
        animation: approvedFloat 4s ease-in-out infinite;
        filter: drop-shadow(0 12px 24px rgba(97, 38, 158, 0.3));
        transition: transform 0.3s ease;
        cursor: default;
    }

    .hero-approved-claim:hover {
        transform: rotate(8deg) scale(1.08);
        animation-play-state: paused;
    }

    .approved-svg {
        width: 100%;
        height: auto;
        display: block;
    }

    @keyframes approvedFloat {
        0%, 100% { 
            transform: rotate(8deg) translateY(0); 
        }
        50% { 
            transform: rotate(8deg) translateY(-10px); 
        }
    }

    .hero-content {
        position: relative;
        z-index: 1;
        max-width: 900px;
        margin: 2.5rem auto 0;
        text-align: center;
        opacity: 0;
        transform: translateY(40px);
    }

    .hero-content.animate-in {
        animation: fadeSlideUp 0.8s ease forwards;
        animation-delay: 0.3s;
    }

    @keyframes fadeSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Hero badge */
    .hero-badge {
        display: inline-block;
        background: rgba(97, 38, 158, 0.1);
        border: 1px solid rgba(97, 38, 158, 0.2);
        color: var(--planted-purple);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        margin-bottom: 1.25rem;
    }

    .hero h1 {
        font-size: clamp(2.5rem, 11vw, 5.5rem);
        color: var(--planted-purple);
        margin-bottom: 1rem;
        line-height: 0.95;
    }

    .hero-subtitle {
        font-size: clamp(1rem, 3vw, 1.25rem);
        color: var(--planted-black);
        opacity: 0.7;
        max-width: 480px;
        margin: 0 auto 2rem;
        line-height: 1.5;
    }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: center;
    }

    .hero-buttons .btn-icon {
        width: 18px;
        height: 18px;
        margin-left: 0.25rem;
    }

    /* Trust indicators */
    .hero-trust {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        margin-top: auto;
        padding-top: 2rem;
        flex-wrap: wrap;
    }

    .trust-item {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--planted-purple);
        opacity: 0.6;
    }

    .trust-divider {
        width: 4px;
        height: 4px;
        background: var(--planted-purple);
        border-radius: 50%;
        opacity: 0.3;
    }

    @media (max-width: 640px) {
        .hero-approved-claim {
            bottom: -2rem;
            right: 2%;
            width: clamp(110px, 30vw, 150px);
        }

        .hero-trust {
            display: none;
        }
    }

    /* Statement Section */
    .statement {
        background: var(--planted-purple);
        padding: 6rem 1.5rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .statement-inner {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .statement h2 {
        font-size: clamp(1.8rem, 6vw, 3.2rem);
        color: white;
        margin-bottom: 1.25rem;
        line-height: 1.1;
    }

    .statement-highlight {
        color: var(--planted-green);
    }

    .statement p {
        font-size: clamp(1rem, 2.5vw, 1.15rem);
        color: rgba(255,255,255,0.8);
        max-width: 500px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Products Section */
    .products {
        background: var(--planted-cream);
        padding: 5rem 0 4rem;
        overflow: hidden;
    }

    .products-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 0 1.5rem 2.5rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .products-header h2 {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        color: var(--planted-purple);
        font-weight: 700;
        line-height: 1;
    }

    .products-header .all-products-btn {
        display: none;
        align-items: center;
        gap: 0.5rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-weight: 700;
        font-size: 0.85rem;
        padding: 0.9rem 1.5rem;
        border-radius: 0.75rem;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .products-header .all-products-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(107, 191, 89, 0.4);
    }

    .products-carousel {
        position: relative;
        padding: 0 1.5rem;
    }

    .products-scroll {
        display: flex;
        gap: 1.25rem;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
        padding-bottom: 1rem;
    }

    .products-scroll::-webkit-scrollbar { display: none; }

    .products-scroll .product-card {
        flex: 0 0 260px;
        scroll-snap-align: start;
        text-decoration: none;
        transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .products-scroll .product-card:hover { transform: translateY(-6px); }

    .products-scroll .product-card-inner {
        position: relative;
        border-radius: 1.25rem;
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-bottom: 0.75rem;
    }

    /* Product card color backgrounds are defined in global.css */

    .products-scroll .product-badge-new {
        position: absolute;
        top: 0.75rem;
        right: 0.75rem;
        background: var(--planted-green);
        color: var(--planted-black);
        font-size: 0.6rem;
        font-weight: 700;
        text-transform: uppercase;
        padding: 0.3rem 0.6rem;
        border-radius: 100px;
        z-index: 10;
    }

    .products-scroll .product-hover-image {
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
    }

    .products-scroll .product-hover-image img { width: 100%; height: 100%; object-fit: cover; }
    .products-scroll .product-card:hover .product-hover-image { opacity: 1; }

    .products-scroll .product-pack-image {
        width: 100%; height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        inset: 0;
        padding: 1.25rem;
        transition: opacity 0.4s ease, transform 0.4s ease;
        z-index: 2;
    }

    .products-scroll .product-card:hover .product-pack-image { opacity: 0; transform: scale(0.95); }
    .products-scroll .product-pack-image img { max-width: 100%; max-height: 100%; object-fit: contain; }

    .products-scroll .product-info { text-align: center; padding: 0 0.25rem; }
    .products-scroll .product-name { font-family: 'VC Henrietta', serif; font-size: 1.1rem; font-weight: 700; color: var(--planted-purple); margin-bottom: 0.1rem; }
    .products-scroll .product-variant { color: var(--planted-purple); font-size: 0.85rem; opacity: 0.7; }

    /* Simple Carousel Navigation */
    .carousel-nav { 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        gap: 1.5rem; 
        margin-top: 2.5rem; 
        padding: 0 1rem; 
    }
    
    .carousel-arrow { 
        width: 44px; 
        height: 44px; 
        border-radius: 50%; 
        background: white; 
        border: 2px solid var(--planted-purple); 
        color: var(--planted-purple); 
        cursor: pointer; 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        transition: all 0.3s ease; 
        flex-shrink: 0;
    }
    
    .carousel-arrow:hover { 
        background: var(--planted-purple); 
        color: white; 
        transform: scale(1.05); 
    }
    
    .carousel-arrow:active { 
        transform: scale(0.95); 
    }
    
    .carousel-dots { 
        display: flex; 
        align-items: center; 
        justify-content: center; 
        gap: 0.5rem; 
        flex-wrap: wrap;
    }
    
    .carousel-dot { 
        width: 10px; 
        height: 10px; 
        border-radius: 50%; 
        background: var(--planted-purple); 
        opacity: 0.3; 
        border: none; 
        cursor: pointer; 
        transition: all 0.3s ease; 
        padding: 0;
    }
    
    .carousel-dot:hover { 
