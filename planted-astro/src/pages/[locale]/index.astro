    @keyframes hintSlide {
        0%, 100% { transform: translateX(0); }
        50% { transform: translateX(8px); }
    }

    @keyframes hintFadeOut {
        0% { opacity: 0.7; }
        100% { opacity: 0; visibility: hidden; }
