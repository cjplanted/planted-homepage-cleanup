        const impactElements = document.querySelectorAll('.impact-intro, .impact-badge, .impact-stat, .impact-tagline, .impact-source, .impact-cta');
        const statValues = document.querySelectorAll('.impact-stat-value[data-count]');
        let impactAnimated = false;

        const impactObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && !impactAnimated) {
                    impactAnimated = true;
                    // Trigger all impact animations
                    impactElements.forEach(el => el.classList.add('active'));
                    // Animate counters
                    animateCounters();
                }
            });
        }, { threshold: 0.3 });

        if (impactSection) impactObserver.observe(impactSection);

        function animateCounters() {
            statValues.forEach(stat => {
                const target = parseInt((stat as HTMLElement).dataset.count || '0');
                const duration = 1500;
                const start = performance.now();
                const hasPercent = stat.querySelector('.percent') !== null;

                function updateCounter(currentTime: number) {
                    const elapsed = currentTime - start;
                    const progress = Math.min(elapsed / duration, 1);
                    const easeOut = 1 - Math.pow(1 - progress, 3);
                    const current = Math.round(easeOut * target);

                    if (target === 0) {
                        stat.textContent = '0';
                    } else if (hasPercent) {
                        stat.innerHTML = current + '<span class="percent">%</span>';
                    } else {
                        stat.textContent = String(current);
                    }

                    if (progress < 1) requestAnimationFrame(updateCounter);
                }
                requestAnimationFrame(updateCounter);
            });
        }

        // Countries Modal
        const countriesBtn = document.getElementById('countriesBtn');
        const countriesModal = document.getElementById('countriesModal');
        const countriesModalBackdrop = document.getElementById('countriesModalBackdrop');
        const countriesModalClose = document.getElementById('countriesModalClose');

        function openCountriesModal() {
            countriesModal?.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeCountriesModal() {
            countriesModal?.classList.remove('active');
            document.body.style.overflow = '';
        }

        countriesBtn?.addEventListener('click', openCountriesModal);
        countriesModalBackdrop?.addEventListener('click', closeCountriesModal);
        countriesModalClose?.addEventListener('click', closeCountriesModal);

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && countriesModal?.classList.contains('active')) {
                closeCountriesModal();
            }
        });
    }

    initHomePage();
    document.addEventListener('astro:page-load', initHomePage);
</script>
