---
import Layout from '../../layouts/Layout.astro';
import { getCollection, getEntry } from 'astro:content';
import { allLocales, locales, type LocaleCode, type CountryCode, getLocalizedProductName, getAmbassadorForLocale } from '../../i18n/config';
import { getTranslations } from '../../i18n/index';
import LocatorV2 from '../../components/locator/LocatorV2.astro';
import NewsletterSignup from '../../components/NewsletterSignup.astro';
import MeatLoverTicker from '../../components/MeatLoverTicker.astro';

export async function getStaticPaths() {
    return allLocales.map((locale) => ({
        params: { locale },
        props: { locale },
    }));
}

const { locale } = Astro.props as { locale: LocaleCode };
const base = import.meta.env.BASE_URL;
const t = getTranslations(locale);
const localeData = locales[locale];

const products = await getCollection('products');
const featuredProducts = products.sort((a, b) => a.data.order - b.data.order);

const recipes = await getCollection('recipes');
const featuredRecipes = recipes.sort((a, b) => a.data.order - b.data.order).slice(0, 4);

const settings = await getEntry('settings', 'global');

// Get ambassador for this locale's country (if any)
const ambassador = getAmbassadorForLocale(locale);
const ambassadorTitle = ambassador ? (localeData.language === 'en' ? ambassador.titleEn : ambassador.title) : '';
const ambassadorQuote = ambassador ? (localeData.language === 'en' ? ambassador.quoteEn : ambassador.quote) : '';
---

<Layout title={`Planted â€“ ${t.home.hero.subtitle}`} locale={locale}>
    <!-- Meat Lover Ticker -->
    <MeatLoverTicker testimonials={t.home.ticker?.testimonials || [
        { text: "Ich hab's meinem Vater nicht gesagt. Er hat den Unterschied nicht gemerkt.", author: "Marc, 34, Grillmeister" },
        { text: "Okay, ich geb's zu. Es schmeckt.", author: "Fleischesser seit 1978" },
        { text: "Mein Metzger ist jetzt sauer auf mich.", author: "Anonymous" },
        { text: "Hab gewettet, es schmeckt nicht. Hab verloren.", author: "Thomas, widerwillig Ã¼berzeugt" },
        { text: "Wenn das pflanzlich ist, dann bin ich Vegetarier.", author: "Stefan, noch nicht ganz" }
    ]} />

    <!-- Hero Section - TV Set Design -->
    <section class="hero">
        <div class="hero-container">
            <div class="hero-grid">
                <!-- Left Column: Text Content -->
                <div class="hero-text">
                    <!-- Badge - Green checkmark style -->
                    <div class="hero-badge hero-badge--green">
                        <span class="b-corp-checkmark">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                        </span>
                        <span>{t.home.hero.badge}</span>
                    </div>

                    <!-- Headline -->
                    <div class="hero-headline">
                        <h1>{t.home.hero.title}</h1>
                    </div>

                    <!-- Simplified subheadline - one unified block -->
                    <p class="hero-subheadline">
                        {t.home.hero.subtitle}
                    </p>

                    <!-- Actions -->
                    <div class="hero-actions">
                        <a href="#locator" class="btn btn-primary">
                            {t.nav.findUs}
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="btn-icon">
                                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                                <circle cx="12" cy="10" r="3"/>
                            </svg>
                        </a>
                        <a href="#products" class="btn btn-secondary">
                            {t.home.products.viewAll}
                        </a>
                    </div>

                </div>

                <!-- Right Column: TV Set with parallax -->
                <div class="hero-visual" data-parallax data-speed="0.3">
                    <!-- TV Frame -->
                    <div class="tv-frame">
                        <div class="tv-screen">
                            <video autoplay muted loop playsinline>
                                <source src={`${base}/video/hero.mp4`} type="video/mp4">
                            </video>
                        </div>
                        <div class="tv-controls">
                            <div class="tv-dial"></div>
                            <div class="tv-brand">PLANTED</div>
                            <div class="tv-dial"></div>
                        </div>
                    </div>

                    <!-- Evidence Link - below video with up arrow -->
                    <a href="#video-proof" class="evidence-link">
                        <span class="evidence-arrow">â†‘</span>
                        <span class="evidence-text">{t.home.hero.evidenceLabel || 'BeweisstÃ¼ck A'}</span>
                    </a>

                    <!-- Floating annotation card -->
                    <div class="tv-annotation">
                        <div class="annotation-card">
                            <div class="annotation-text">
                                {t.home.hero.annotationText || 'Ja, wir zeigen dir ein Video von brutzelndem Essen. Das ist quasi Manipulation. Aber es ist auch einfach die Wahrheit.'}
                            </div>
                            <div class="annotation-signature">{t.home.hero.annotationSignature || 'Das Marketing-Team'}</div>
                        </div>
                    </div>

                    <!-- Approved badge -->
                    <div class="approved-badge">
                        <img src={`${base}/images/approvedclaim.svg`} alt="Approved by Meat Lovers" />
                    </div>
                </div>
            </div>

            <!-- Scroll Indicator -->
            <div class="scroll-indicator" data-hero-scroll-cue>
                <span class="scroll-indicator__text">{t.home.hero.scrollCue || 'Scroll'}</span>
                <svg class="scroll-indicator__arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 5v14M5 12l7 7 7-7"/>
                </svg>
            </div>
        </div>

        <!-- Countries Modal -->
        <div class="countries-modal" id="countriesModal">
            <div class="countries-modal-backdrop" id="countriesModalBackdrop"></div>
            <div class="countries-modal-content">
                <button class="countries-modal-close" id="countriesModalClose" type="button" aria-label="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
                <h3>{t.countries ? 'Available in' : 'Available in'}</h3>
                <div class="countries-grid">
                    <div class="country-item"><span class="country-flag">CH</span><span>{t.countries?.switzerland || 'Switzerland'}</span></div>
                    <div class="country-item"><span class="country-flag">DE</span><span>{t.countries?.germany || 'Germany'}</span></div>
                    <div class="country-item"><span class="country-flag">AT</span><span>{t.countries?.austria || 'Austria'}</span></div>
                    <div class="country-item"><span class="country-flag">FR</span><span>{t.countries?.france || 'France'}</span></div>
                    <div class="country-item"><span class="country-flag">IT</span><span>{t.countries?.italy || 'Italy'}</span></div>
                    <div class="country-item"><span class="country-flag">NL</span><span>{t.countries?.netherlands || 'Netherlands'}</span></div>
                    <div class="country-item"><span class="country-flag">GB</span><span>{t.countries?.unitedKingdom || 'United Kingdom'}</span></div>
                    <div class="country-item"><span class="country-flag">ES</span><span>{t.countries?.spain || 'Spain'}</span></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Trust Stats Section - moved from hero for better breathing room -->
    <section class="trust-stats">
        <div class="trust-stats-inner">
            <div class="trust-stat">
                <div class="trust-stat-value">{t.home.trust.restaurants}</div>
                <div class="trust-stat-label">{t.home.hero.proofRestaurants || 'Restaurants'}</div>
            </div>
            <div class="trust-stat">
                <div class="trust-stat-value">{t.home.trust.countries}</div>
                <div class="trust-stat-label">{t.home.hero.proofCountries || 'LÃ¤nder'}</div>
            </div>
            <div class="trust-stat">
                <div class="trust-stat-value">1</div>
                <div class="trust-stat-label">{t.home.hero.proofChampion || 'SchwingerkÃ¶nig'}</div>
            </div>
        </div>
    </section>

    <!-- Statement Section -->
    <section class="statement">
        <div class="statement-inner">
            <h2 class="reveal">
                {t.home.mission.title}
                <span class="statement-highlight">{t.home.mission.highlight}</span>
            </h2>
            <p class="reveal reveal-delay-1">{t.home.mission.text}</p>
        </div>
    </section>

    <!-- Intro Section (Swiss-Made Statement) -->
    <section class="intro">
        <div class="intro-content">
            <div class="intro-label reveal">
                <span class="intro-flag">ðŸ‡¨ðŸ‡­</span>
                <span>Swiss-made</span>
            </div>
            <h2 class="reveal reveal-delay-1">
                Wir glauben, dass Fleisch nicht von Tieren kommen muss, um gut zu schmecken.
            </h2>
            <p class="reveal reveal-delay-2">
                Deshalb entwickeln wir in der Schweiz pflanzliche Alternativen, die so authentisch schmecken,
                dass selbst eingefleischte Fleischliebhaber begeistert sind.
            </p>
            <div class="intro-badges reveal reveal-delay-3">
                <div class="intro-badge">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="intro-badge-icon">
                        <path d="M12 2a5 5 0 0 0-5 5v3H6a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V12a2 2 0 0 0-2-2h-1V7a5 5 0 0 0-5-5z"/>
                        <circle cx="12" cy="16" r="1"/>
                    </svg>
                    <span>100% pflanzlich</span>
                </div>
                <div class="intro-badge">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="intro-badge-icon">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 1 1-18 0 9 9 0 0 1 18 0z"/>
                    </svg>
                    <span>Keine Zusatzstoffe</span>
                </div>
                <div class="intro-badge">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="intro-badge-icon">
                        <path d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                    <span>High Protein</span>
                </div>
                <div class="intro-badge">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" class="intro-badge-icon">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    <span>B Corp</span>
                </div>
            </div>
        </div>
    </section>

    <!-- Products Section -->
    <section class="products" id="products">
        <div class="products-header">
            <h2 class="reveal">{t.home.products.title}</h2>
            <a href={`${base}/${locale}/products`} class="view-all-link reveal">
                {t.home.products.viewAllLink || `${t.home.products.viewAll} â†’`}
            </a>
        </div>

        <div class="products-carousel-wrapper" id="productsCarouselWrapper">
            <div class="products-grid" id="productsGrid">
                {featuredProducts.map((product) => {
                    const hoverText = t.home.products.hoverText?.[product.data.slug] || 'Pflanzlich. Und verdammt lecker.';
                    return (
                    <a href={`${base}/${locale}/products/${product.data.slug}`} class="product-card" data-color={product.data.color}>
                        <div class="product-image">
                            {product.data.isNew && <span class="product-badge">{t.common.new}</span>}
                            <img src={product.data.images.main} alt={`${product.data.name} ${product.data.variant}`} class="product-pack-image" loading="lazy">
                        </div>
                        <div class="product-info">
                            <span class="product-category">{getLocalizedProductName(product.data.name, locale)}</span>
                            <h3 class="product-name">{product.data.variant}</h3>
                        </div>
                        <div class="product-hover-text">{hoverText}</div>
                    </a>
                    );
                })}
            </div>

            <!-- Scroll hint (desktop only) -->
            <div class="scroll-hint">
                <span>{t.home.products.scrollHint || 'Ziehen zum Entdecken'}</span>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
            </div>
        </div>

        <!-- Progress dots -->
        <div class="scroll-progress" id="scrollProgress">
            <div class="scroll-progress-dot active"></div>
            <div class="scroll-progress-dot"></div>
            <div class="scroll-progress-dot"></div>
            <div class="scroll-progress-dot"></div>
        </div>
    </section>

    <!-- Impact Section - Immersive Full-Width -->
    <section class="impact" id="impact">
        <!-- Abstract gradient background -->
        <div class="impact-bg">
            <div class="impact-gradient"></div>
            <div class="impact-pattern"></div>
        </div>

        <div class="impact-content">
            <!-- Playful intro -->
            <div class="impact-intro">
                <h2 class="impact-intro-title">{t.home.impact.badge}</h2>
                <p class="impact-intro-subtitle">{t.home.impact.badgeSubtitle || ''}</p>
            </div>

            <!-- The big stats -->
            <div class="impact-stats">
                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactCO2}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">{t.home.impact.lessCO2}</div>
                    <div class="impact-stat-compare">{t.home.impact.vsCow}</div>
                    <div class="impact-stat-context">{t.home.impact.co2Context}</div>
                </div>

                <div class="impact-stat">
                    <div class="impact-stat-value" data-count={settings?.data.impactWater}>0<span class="percent">%</span></div>
                    <div class="impact-stat-label">{t.home.impact.lessWater}</div>
                    <div class="impact-stat-compare">{t.home.impact.vsCow}</div>
                    <div class="impact-stat-context">{t.home.impact.waterContext}</div>
                </div>

                <div class="impact-stat special">
                    <div class="impact-stat-value" data-count={settings?.data.impactAnimals}>0</div>
                    <div class="impact-stat-label">{t.home.impact.animalsHarmed}</div>
                    <div class="impact-stat-compare">{t.home.impact.ever}</div>
                    <div class="impact-stat-context">{t.home.impact.animalsContext}</div>
                </div>
            </div>

            <!-- Brand tagline -->
            <h2 class="impact-tagline">{t.home.impact.tagline}</h2>

            <!-- Source citation -->
            <p class="impact-source">{t.home.impact.source}</p>

            <!-- Call to action -->
            <div class="impact-cta">
                <a href={`${base}/${locale}/our-mission`} class="impact-btn">
                    {t.home.impact.seeHow}
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                        <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>

        <!-- Decorative floating elements -->
        <div class="impact-float float-1"></div>
        <div class="impact-float float-2"></div>
        <div class="impact-float float-3"></div>
    </section>

    <!-- Ambassador Section - Only shows if there's an ambassador for this country -->
    {ambassador && (
        <section class="ambassador" id="ambassador">
            <div class="ambassador-card">
                <div class="ambassador-image">
                    <img
                        src={`${base}${ambassador.image}`}
                        alt={ambassador.name}
                        loading="lazy"
                    />
                    <span class="ambassador-badge">{t.home.ambassador.badge}</span>
                </div>
                <div class="ambassador-content">
                    <div class="ambassador-surprise">
                        Ja, wirklich. DER {ambassador.name.split(' ')[1]}.
                    </div>
                    <blockquote class="ambassador-quote">
                        {ambassadorQuote}
                    </blockquote>
                    <p class="ambassador-name">{ambassador.name}</p>
                    <p class="ambassador-title">{ambassadorTitle}</p>
                    <div class="ambassador-context">
                        {t.home.ambassador.context}
                    </div>
                    <div class="ambassador-favorite">
                        <span>{ambassador.name.split(' ')[0]}s Favorit:</span>
                        <a href={`${base}/${locale}/products/planted-steak`} class="ambassador-favorite-product">
                            planted.steak
                        </a>
                    </div>
                </div>
            </div>
        </section>
    )}

    <!-- Recipes Section -->
    <section class="recipes-section" id="recipes">
        <div class="recipes-header">
            <div class="recipes-header-text">
                <h2 class="reveal">{t.home.recipes.title}</h2>
                <p class="recipes-subline reveal">{t.home.recipes.subtitle}</p>
            </div>
            <a href={`${base}/${locale}/recipes`} class="recipes-view-all reveal">{t.home.recipes.viewAll} â†’</a>
        </div>

        <div class="recipes-container">
            <div class="recipes-grid">
                {featuredRecipes.map((recipe) => (
                    <a href={`${base}/${locale}/recipes/${recipe.data.slug}`} class="recipe-card reveal-scale">
                        <img src={recipe.data.image} alt={recipe.data.title} class="recipe-image" loading="lazy">
                        <div class="recipe-overlay">
                            <div class="recipe-title">{recipe.data.title}</div>
                            <div class="recipe-meta">{recipe.data.cookTime} {t.recipes.time} â€¢ {t.recipes.difficulty[recipe.data.difficulty.toLowerCase() as 'easy' | 'medium' | 'hard'] || recipe.data.difficulty}</div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- Store Locator V2 (Apple-style split view with animations) -->
    <LocatorV2
        locale={locale}
        translations={t.home.locatorV2 || {}}
    />

    <!-- Newsletter Signup -->
    <NewsletterSignup
        translations={{
            badge: t.newsletter.title,
            title: t.newsletter.subtitle,
            description: t.newsletter.description,
            placeholder: t.newsletter.placeholder,
            button: t.newsletter.button,
            consent: t.newsletter.consent,
            success: t.newsletter.success,
        }}
    />

    <!-- Business Section -->
    <section class="business" id="business">
        <div class="business-card" data-hover-lift="8">
            <div class="business-content">
                <span class="business-label">{t.home.business.badge}</span>
                <h2>{t.gastronomy.hero.title}</h2>
                <p>{t.gastronomy.hero.subtitle}</p>
                <div class="business-stats">
                    <div class="business-stat">
                        <div class="business-stat-value">{t.gastronomy.stats.restaurants}</div>
                        <div class="business-stat-label">{t.gastronomy.stats.restaurantsLabel}</div>
                    </div>
                    <div class="business-stat">
                        <div class="business-stat-value">{t.gastronomy.stats.countries}</div>
                        <div class="business-stat-label">{t.gastronomy.stats.countriesLabel}</div>
                    </div>
                </div>
                <a href={`${base}/${locale}/gastronomy`} class="btn btn-green" data-magnetic data-magnetic-strength="0.12">
                    {t.gastronomy.cta.samples}
                </a>
            </div>
            <div class="business-image">
                <img src="https://eatplanted.com/cdn/shop/files/DSC_2472.jpg?v=1662454073" alt="Restaurant kitchen" loading="lazy">
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Hero Section - TV Set Design */
    .hero {
        min-height: calc(100vh - 80px);
        background: var(--planted-cream);
        display: flex;
        align-items: center;
        padding: 4rem 0 3rem;
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%237B2D8E' fill-opacity='0.02'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
        pointer-events: none;
    }

    .hero-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem;
        width: 100%;
        display: flex;
        flex-direction: column;
        min-height: auto;
    }

    /* Scroll indicator positioning */
    .hero .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 10;
        color: var(--planted-purple);
    }

    .hero .scroll-indicator__arrow {
        stroke: var(--planted-purple);
    }

    .hero-grid {
        position: relative;
        z-index: 1;
        display: grid;
        grid-template-columns: 1fr 1.15fr;
        gap: 3rem;
        align-items: center;
    }

    .hero-text {
        max-width: 520px;
    }

    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: white;
        padding: 8px 16px;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--planted-purple);
        box-shadow: 0 4px 12px rgba(97, 38, 158, 0.15);
        margin-bottom: 1.5rem;
        animation: fadeInUp 0.6s ease forwards;
    }

    .hero-badge .bcorp-logo {
        width: 28px;
        height: 28px;
        border-radius: 50%;
    }
    /* Green Badge Variant */
    .hero-badge--green {
        background: rgba(107, 191, 89, 0.1);
        border: 1px solid var(--planted-green);
        color: var(--planted-green);
    }

    .b-corp-checkmark {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        background: var(--planted-green);
        border-radius: 50%;
    }

    .b-corp-checkmark svg {
        width: 14px;
        height: 14px;
        stroke: white;
    }

    /* Simplified subheadline */
    .hero-subheadline {
        font-size: clamp(1rem, 2vw, 1.15rem);
        color: var(--planted-charcoal);
        opacity: 0.7;
        margin-top: 1rem;
        max-width: 420px;
        line-height: 1.6;
        animation: fadeInUp 0.6s ease 0.2s forwards;
        opacity: 0;
    }

    /* Evidence Link - below video */
    .evidence-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        background: rgba(97, 38, 158, 0.05);
        border-radius: 100px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .evidence-link:hover {
        background: rgba(97, 38, 158, 0.1);
        transform: translateY(-2px);
    }

    .evidence-link .evidence-arrow {
        font-size: 1rem;
        color: var(--planted-purple);
        animation: bounceUp 1.5s ease-in-out infinite;
    }

    .evidence-link .evidence-text {
        font-family: 'VC Henrietta', serif;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--planted-purple);
    }

    @keyframes bounceUp {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-4px); }
    }

    /* Trust Stats Section */
    .trust-stats {
        background: white;
        padding: 3rem 1.5rem;
        border-top: 1px solid rgba(97, 38, 158, 0.08);
    }

    .trust-stats-inner {
        display: flex;
        justify-content: center;
        gap: 4rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .trust-stat {
        text-align: center;
