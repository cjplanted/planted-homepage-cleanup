            let dragMoved = false;
            grid.addEventListener('mousedown', () => { dragMoved = false; });
            grid.addEventListener('mousemove', () => { if (isDown) dragMoved = true; });
            grid.addEventListener('click', (e: MouseEvent) => {
                if (dragMoved) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            }, true);
