        opacity: 0.6;
    }

    .legal-content section {
        margin-bottom: 2.5rem;
    }

    .legal-content h2 {
        font-family: 'VC Henrietta', serif;
        font-size: 1.4rem;
        color: var(--planted-purple);
        margin-bottom: 1rem;
        padding-top: 1rem;
    }

    .legal-content p {
        line-height: 1.8;
        margin-bottom: 1rem;
        color: var(--planted-charcoal);
    }

    .legal-content a {
        color: var(--planted-purple);
        text-decoration: underline;
    }

    .info-card {
        display: flex;
        gap: 2rem;
        background: var(--planted-cream);
        padding: 2rem;
        border-radius: 1.5rem;
        align-items: center;
    }

    .info-logo svg {
        width: 120px;
        height: auto;
    }

    .info-details h3 {
        font-family: 'VC Henrietta', serif;
        font-size: 1.3rem;
        color: var(--planted-purple);
        margin-bottom: 0.5rem;
    }

    .info-details p {
        margin: 0;
        line-height: 1.8;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        background: var(--planted-cream);
        padding: 1.25rem;
        border-radius: 1rem;
    }

    .info-item .label {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        opacity: 0.6;
        margin-bottom: 0.25rem;
    }

    .info-item .value {
        font-weight: 600;
        color: var(--planted-purple);
    }

    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .contact-card {
        background: white;
        border: 2px solid var(--planted-cream);
        padding: 1.5rem;
        border-radius: 1rem;
        text-align: center;
        transition: border-color 0.3s, transform 0.3s;
    }

    .contact-card:hover {
        border-color: var(--planted-purple);
        transform: translateY(-2px);
    }

    .contact-icon {
        width: 48px;
        height: 48px;
        margin: 0 auto 1rem;
        background: var(--planted-cream);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-icon svg {
        width: 24px;
        height: 24px;
        color: var(--planted-purple);
    }

    .contact-card h3 {
        font-size: 0.9rem;
        color: var(--planted-charcoal);
        margin-bottom: 0.5rem;
    }

    .contact-card a {
        font-size: 0.9rem;
        color: var(--planted-purple);
        text-decoration: none;
        font-weight: 600;
    }

    .contact-card a:hover {
        text-decoration: underline;
    }

    @media (max-width: 600px) {
        .info-card {
            flex-direction: column;
            text-align: center;
        }
    }

    @media (min-width: 768px) {
        .legal-page {
            padding: 8rem 2rem 5rem;
        }
    }
</style>
