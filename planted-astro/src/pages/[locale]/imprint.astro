<style>
    .legal-page {
        max-width: 800px;
        margin: 0 auto;
        padding: 6rem 1.5rem 4rem;
    }

    .legal-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid var(--planted-cream);
    }

    .legal-header h1 {
        font-size: clamp(2rem, 6vw, 3rem);
        color: var(--planted-purple);
        margin-bottom: 0.5rem;
    }

    .subtitle {
