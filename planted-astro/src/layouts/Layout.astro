---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CookieConsent from '../components/CookieConsent.astro';
import '../styles/global.css';
import { locales, defaultLocale, allLocales, type LocaleCode } from '../i18n/config';

interface Props {
    title: string;
    description?: string;
    image?: string;
    currentPage?: string;
    locale?: LocaleCode;
}

const {
    title,
    description = 'Plant-based meat that actually tastes like meat. Made in Switzerland. B Corp certified.',
    image = 'https://cdn.shopify.com/s/files/1/0049/5383/3521/files/planted-og-image.jpg',
    currentPage = '',
    locale = defaultLocale
} = Astro.props;
const localeData = locales[locale];
const langCode = localeData?.language || 'en';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
const siteOrigin = Astro.site?.origin || 'https://cgjen-box.github.io';
const siteUrl = `${siteOrigin}${base}`;

// Get current page path without locale prefix for hreflang generation
const currentPath = Astro.url.pathname.replace(base, '').replace(/^\/[a-z]{2}(-[a-z]{2})?\//, '/').replace(/^\/?/, '');

// Generate hreflang URLs for all locales
const hreflangUrls = allLocales.map(loc => {
    const locData = locales[loc];
    const langRegion = loc === 'global' ? 'x-default' :
        loc === 'uk' ? 'en-GB' :
        `${locData.language}-${locData.country.toUpperCase()}`;
    const url = `${siteUrl}/${loc}/${currentPath}`;
    return { lang: langRegion, url };
});

// Schema.org structured data
const schemaOrg = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "Organization",
            "@id": `${siteUrl}#organization`,
            "name": "Planted Foods AG",
            "url": siteUrl,
            "logo": {
                "@type": "ImageObject",
                "url": `${siteUrl}images/planted-logo.svg`
            },
            "sameAs": [
                "https://www.instagram.com/eatplanted/",
                "https://www.facebook.com/eatplanted/",
                "https://www.linkedin.com/company/planted-zurich/",
                "https://twitter.com/eatplanted"
            ],
            "description": "Plant-based meat that actually tastes like meat. Made in Switzerland. B Corp certified."
        },
        {
            "@type": "WebSite",
            "@id": `${siteUrl}#website`,
            "url": siteUrl,
            "name": "Planted",
            "publisher": { "@id": `${siteUrl}#organization` },
            "inLanguage": langCode
        },
        {
            "@type": "WebPage",
            "@id": canonicalURL.href,
            "url": canonicalURL.href,
            "name": title,
            "description": description,
            "isPartOf": { "@id": `${siteUrl}#website` },
            "inLanguage": langCode
        }
    ]
};
---

<!DOCTYPE html>
<html lang={langCode}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#61269E">

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={canonicalURL}>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={image}>

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={image}>

    <!-- Hreflang tags for international SEO -->
    {hreflangUrls.map(({ lang, url }) => (
        <link rel="alternate" hreflang={lang} href={url} />
    ))}

    <!-- Schema.org structured data -->
    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />

    <!-- Preload critical fonts -->
    <link rel="preload" href={`${base}/fonts/VCHenriettaCondensed-Bold.woff2`} as="font" type="font/woff2" crossorigin>
    <link rel="preload" href={`${base}/fonts/GalanoGrotesque-Medium.otf`} as="font" type="font/otf" crossorigin>

    <!-- Font Face Declarations with dynamic base URL -->
    <style set:html={`
        @font-face {
            font-family: 'VC Henrietta';
            src: url('${base}/fonts/VCHenriettaCondensed-Bold.woff2') format('woff2'),
                 url('${base}/fonts/VCHenriettaCondensed-Bold.woff') format('woff');
            font-weight: 700;
            font-style: normal;
            font-display: swap;
        }
        @font-face {
            font-family: 'VC Henrietta';
            src: url('${base}/fonts/VCHenriettaCondensed-SemiBold.woff2') format('woff2'),
                 url('${base}/fonts/VCHenriettaCondensed-SemiBold.woff') format('woff');
            font-weight: 600;
            font-style: normal;
            font-display: swap;
        }
        @font-face {
            font-family: 'Galano Grotesque';
            src: url('${base}/fonts/GalanoGrotesque-Regular.otf') format('opentype');
            font-weight: 400;
            font-style: normal;
            font-display: swap;
        }
        @font-face {
            font-family: 'Galano Grotesque';
            src: url('${base}/fonts/GalanoGrotesque-Medium.otf') format('opentype');
            font-weight: 500;
            font-style: normal;
            font-display: swap;
        }
        @font-face {
            font-family: 'Galano Grotesque';
            src: url('${base}/fonts/GalanoGrotesque-Bold.otf') format('opentype');
            font-weight: 700;
            font-style: normal;
            font-display: swap;
        }
    `} />

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <ViewTransitions />
</head>
<body>
    <Navbar currentPage={currentPage} locale={locale} />
    <slot />
    <Footer locale={locale} />
    <CookieConsent />

    <script>
        function initAnimations() {
            // Cache stagger items per parent for faster lookup
            const staggerCache = new WeakMap();

            // Scroll reveal animations using Intersection Observer
            const revealObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const target = entry.target;

                        // Optimized stagger delay calculation with caching
                        if (target.classList.contains('stagger-item')) {
                            const parent = target.parentElement;
                            if (parent) {
                                let siblings = staggerCache.get(parent);
                                if (!siblings) {
                                    siblings = Array.from(parent.querySelectorAll('.stagger-item'));
                                    staggerCache.set(parent, siblings);
                                }
                                const index = siblings.indexOf(target);
                                target.style.transitionDelay = `${index * 0.1}s`;
                            }
                        }
                        target.classList.add('active');
                        // Unobserve after activation for performance
                        revealObserver.unobserve(target);
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -30px 0px'
            });

            // Query once, observe all reveal elements
            document.querySelectorAll('.reveal, .reveal-scale, .reveal-left, .reveal-right, .stagger-item').forEach(el => {
                revealObserver.observe(el);
            });

            // Smooth scroll for anchor links using event delegation
            document.addEventListener('click', (e) => {
                const anchor = e.target.closest('a[href^="#"]');
                if (anchor) {
                    const href = anchor.getAttribute('href');
                    if (href && href !== '#') {
                        e.preventDefault();
                        const target = document.querySelector(href);
                        if (target) {
                            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    }
                }
            });
        }

        // Run on initial load
        initAnimations();

        // Re-run after View Transitions navigation
        document.addEventListener('astro:page-load', initAnimations);
    </script>
</body>
</html>
