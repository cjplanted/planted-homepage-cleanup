            src: url('${base}/fonts/GalanoGrotesque-Bold.otf') format('opentype');
            font-weight: 700;
            font-style: normal;
            font-display: swap;
        }
    `} />

    <!-- DNS prefetch for external resources -->
    <link rel="dns-prefetch" href="https://cdn.shopify.com">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <!-- Google Fonts - Caveat for handwritten style, Nunito for V3 locator -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500&family=Nunito:wght@400;600;700;800;900&display=swap" rel="stylesheet">

    <ViewTransitions />
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-XXXXXXX"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <Navbar currentPage={currentPage} locale={locale} />
    <main class="main-content">
        <slot />
    </main>
    <Footer locale={locale} />
    <CookieConsent locale={locale} />

    <!-- Save locale preference when user visits a localized page -->
    <script define:vars={{ locale }}>
        // Save current locale to localStorage for future auto-detection
        (function() {
            const LOCALE_STORAGE_KEY = 'planted_locale_preference';
            const currentLocale = locale;

            if (currentLocale) {
                try {
                    localStorage.setItem(LOCALE_STORAGE_KEY, currentLocale);
                } catch (e) {
                    // localStorage not available
                }
            }
        })();
    </script>

    <script>
        function initAnimations() {
            // Cache stagger items per parent for faster lookup
            const staggerCache = new WeakMap();

            // Scroll reveal animations using Intersection Observer
            const revealObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const target = entry.target;

                        // Optimized stagger delay calculation with caching
                        if (target.classList.contains('stagger-item')) {
                            const parent = target.parentElement;
                            if (parent) {
                                let siblings = staggerCache.get(parent);
                                if (!siblings) {
                                    siblings = Array.from(parent.querySelectorAll('.stagger-item'));
                                    staggerCache.set(parent, siblings);
                                }
                                const index = siblings.indexOf(target);
                                target.style.transitionDelay = `${index * 0.1}s`;
                            }
                        }
                        target.classList.add('active');
                        // Unobserve after activation for performance
                        revealObserver.unobserve(target);
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -30px 0px'
            });

            // Query once, observe all reveal elements
            document.querySelectorAll('.reveal, .reveal-scale, .reveal-left, .reveal-right, .stagger-item').forEach(el => {
                revealObserver.observe(el);
            });

            // Smooth scroll for anchor links using event delegation
            document.addEventListener('click', (e) => {
                const anchor = e.target.closest('a[href^="#"]');
                if (anchor) {
                    const href = anchor.getAttribute('href');
                    if (href && href !== '#') {
                        e.preventDefault();
                        const target = document.querySelector(href);
                        if (target) {
                            target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                        }
                    }
                }
            });
        }

        // Run on initial load
        initAnimations();

        // Re-run after View Transitions navigation
        document.addEventListener('astro:page-load', initAnimations);
    </script>

    <!-- Smooth Scroll with GSAP + Lenis -->
    <script>
        import { initSmoothScroll, destroySmoothScroll, gsap, ScrollTrigger } from '../scripts/smooth-scroll';
        import { initHeroAnimations } from '../scripts/animations/hero';
        import { initTransformationAnimations } from '../scripts/animations/transformation';
        import { initStatsAnimations } from '../scripts/animations/stats';
        import { initMagneticEffects } from '../scripts/interactions/magnetic';
        import { initPageLoadSequence, initLazyVideos, initPerformanceHints } from '../scripts/animations/page-load';
        import { initScrollFeedback } from '../scripts/interactions/scroll-velocity';

        let lenisInstance: ReturnType<typeof initSmoothScroll> | null = null;

        function initScrollAnimations() {
            // CRITICAL: Initialize Lenis smooth scroll FIRST
            // This ensures gsap.registerPlugin(ScrollTrigger) is called before any ScrollTrigger instances
            lenisInstance = initSmoothScroll();

            // Wait for next frame to ensure plugin registration is complete
            requestAnimationFrame(() => {
                // Initialize hero entrance animations (must run after page load)
                // initHeroEntrance removed - CSS handles entrance animations

                // Initialize hero section scroll animations
                initHeroAnimations();

                // Initialize transformation section animations
                initTransformationAnimations();

                // Initialize stats counter animations
                initStatsAnimations();

                // Initialize magnetic and interactive effects
                initMagneticEffects();

                // Initialize page load sequence
                initPageLoadSequence();

                // Initialize lazy loading and performance hints
                initLazyVideos();
                initPerformanceHints();

                // Initialize scroll velocity feedback
                initScrollFeedback();

                // Initialize data-animate elements with ScrollTrigger
                const animatedElements = document.querySelectorAll('[data-animate]');

                animatedElements.forEach((el) => {
                    const delay = parseFloat(el.getAttribute('data-delay') || '0');

                    ScrollTrigger.create({
                        trigger: el,
                        start: 'top 85%',
                        once: true,
                        onEnter: () => {
                            setTimeout(() => {
                                el.classList.add('is-visible');
                            }, delay * 1000);
                        },
                    });
                });

                // Parallax elements
                document.querySelectorAll('[data-parallax]').forEach((el) => {
                    const speed = parseFloat(el.getAttribute('data-speed') || '0.3');

                    gsap.to(el, {
                        yPercent: -20 * speed,
                        ease: 'none',
                        scrollTrigger: {
                            trigger: el.closest('section') || el,
                            start: 'top bottom',
                            end: 'bottom top',
                            scrub: 1,
                        },
                    });
                });
            });
        }

        function cleanupScrollAnimations() {
            // Kill all ScrollTriggers
            ScrollTrigger.getAll().forEach((st) => st.kill());
            // Destroy Lenis
            destroySmoothScroll();
        }

        // Initial load
        initScrollAnimations();

        // Handle View Transitions
        document.addEventListener('astro:before-swap', cleanupScrollAnimations);
        document.addEventListener('astro:page-load', initScrollAnimations);
    </script>

    <style>
        .main-content {
            padding-top: 80px; /* Height of fixed navbar */
        }
    </style>
</body>
</html>
