                {retailPartners.map((retailer) => {
                    const retailerCountries = getRetailerCountries(retailer);
                    const retailerProducts = (retailer.data.products || [])
                        .map(slug => productMap.get(slug))
                        .filter(Boolean)
                        .slice(0, 4);

                    return (
                        <a
                            href={retailer.data.url}
                            target="_blank"
                            rel="noopener noreferrer"
