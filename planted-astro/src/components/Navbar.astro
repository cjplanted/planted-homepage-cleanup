    <div class="nav-right">
        <div class="nav-links">
            <a href={`${base}${localePath}/products`} class:list={[{ active: currentPage === 'products' }]}>{t.nav.products}</a>
            <a href={`${base}${localePath}/recipes`} class:list={[{ active: currentPage === 'recipes' }]}>{t.nav.recipes}</a>
            <a href={`${base}${localePath}/#locator`}>{t.nav.findUs}</a>
        </div>

        <!-- Country Selector -->
        <div class="country-selector" id="countrySelector">
            <button class="country-btn" id="countryBtn" aria-label={t.nav.selectCountry}>
                <span class="country-flag">{currentLocaleData.flag}</span>
                <span class="country-code">{locale.toUpperCase()}</span>
                <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
            </button>
            <div class="country-dropdown" id="countryDropdown">
                {allLocales.map((loc) => {
                    const locData = locales[loc];
                    const isActive = loc === locale;
                    return (
                        <a
                            href={`${base}/${loc}/`}
                            class:list={['country-option', { active: isActive }]}
                        >
                            <span class="country-flag">{locData.flag}</span>
                            <span class="country-name">{locData.name}</span>
                            <span class="country-lang">{locData.languageName}</span>
                        </a>
                    );
                })}
            </div>
        </div>

        <button class="nav-toggle" id="navToggle" aria-label="Open menu">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</nav>

<!-- Mobile Menu -->
<div class="nav-menu" id="navMenu">
    <button class="close-menu" id="closeMenu" aria-label="Close menu">&#10005;</button>
    <a href={`${base}${localePath}/products`}>{t.nav.products}</a>
    <a href={`${base}${localePath}/recipes`}>{t.nav.recipes}</a>
    <a href={`${base}${localePath}/#locator`}>{t.nav.findUs}</a>

    <div class="mobile-country-selector">
        <span class="mobile-country-label">{t.nav.selectCountry}</span>
        <div class="mobile-country-grid">
            {allLocales.map((loc) => {
                const locData = locales[loc];
                const isActive = loc === locale;
                return (
                    <a
                        href={`${base}/${loc}/`}
                        class:list={['mobile-country-option', { active: isActive }]}
                    >
                        <span class="country-flag">{locData.flag}</span>
                        <span class="country-code">{loc.toUpperCase()}</span>
                    </a>
                );
            })}
        </div>
    </div>
</div>

<style>
    .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 0 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .nav.hidden {
        transform: translateY(-100%);
    }

    .nav.scrolled {
        background: rgba(253, 248, 243, 0.95);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
    }

    .logo {
        position: relative;
        z-index: 1001;
    }

    .logo svg {
        height: 52px;
        width: auto;
        display: block;
    }

    .nav-right {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding-top: 0.75rem;
    }

    .nav-links {
        display: none;
        align-items: center;
        gap: 2rem;
    }

    .nav-links a {
        color: var(--planted-purple);
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: opacity 0.3s;
    }

    .nav-links a:hover,
    .nav-links a.active {
        opacity: 0.7;
    }

    /* Country Selector */
    .country-selector {
        position: relative;
        display: none;
    }

    .country-btn {
        display: flex;
        align-items: center;
        gap: 0.4rem;
        background: rgba(97, 38, 158, 0.08);
        border: 1px solid rgba(97, 38, 158, 0.15);
        border-radius: 100px;
        padding: 0.5rem 0.75rem;
        cursor: pointer;
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--planted-purple);
        transition: all 0.3s ease;
    }

    .country-btn:hover {
        background: rgba(97, 38, 158, 0.12);
        border-color: rgba(97, 38, 158, 0.25);
    }

    .country-flag {
        font-size: 1rem;
    }

    .country-code {
        font-size: 0.75rem;
        letter-spacing: 0.02em;
    }

    .chevron {
        width: 14px;
        height: 14px;
        transition: transform 0.3s ease;
    }

    .country-selector.open .chevron {
        transform: rotate(180deg);
    }

    .country-dropdown {
        position: absolute;
        top: calc(100% + 0.5rem);
        right: 0;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
        min-width: 220px;
        opacity: 0;
        visibility: hidden;
        transform: translateY(-10px);
        transition: all 0.25s ease;
        overflow: hidden;
        z-index: 1002;
    }

    .country-selector.open .country-dropdown {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .country-option {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        text-decoration: none;
        color: var(--planted-black);
        transition: background 0.2s ease;
    }

    .country-option:hover {
        background: rgba(97, 38, 158, 0.06);
    }

    .country-option.active {
        background: rgba(97, 38, 158, 0.1);
    }

    .country-option .country-flag {
        font-size: 1.25rem;
    }

    .country-option .country-name {
        font-weight: 600;
        font-size: 0.9rem;
        flex: 1;
    }

    .country-option .country-lang {
        font-size: 0.75rem;
        color: var(--planted-purple);
        opacity: 0.7;
    }

    .nav-toggle {
        width: 44px;
        height: 44px;
        background: var(--planted-purple);
        border: none;
        border-radius: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 5px;
        cursor: pointer;
    }

    .nav-toggle span {
        width: 18px;
        height: 2px;
        background: white;
        border-radius: 2px;
    }

    /* Mobile Menu */
    .nav-menu {
        position: fixed;
        inset: 0;
        background: var(--planted-purple);
        z-index: 999;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        opacity: 0;
        visibility: hidden;
        transition: opacity 0.35s ease, visibility 0.35s ease;
        display: flex;
    }

    .nav-menu.open {
        opacity: 1;
        visibility: visible;
    }

    .nav-menu > a {
        font-family: 'VC Henrietta', serif;
        font-size: clamp(2rem, 8vw, 3.5rem);
        font-weight: 700;
        color: white;
        text-decoration: none;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.4s ease, transform 0.4s ease, color 0.3s ease;
    }

    .nav-menu.open > a {
        opacity: 1;
        transform: translateY(0);
    }

    .nav-menu > a:nth-child(2) { transition-delay: 0.05s; }
    .nav-menu > a:nth-child(3) { transition-delay: 0.1s; }
    .nav-menu > a:nth-child(4) { transition-delay: 0.15s; }

    .nav-menu > a:hover {
        color: var(--planted-green);
    }

    .mobile-country-selector {
        margin-top: 2rem;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.4s ease, transform 0.4s ease;
        transition-delay: 0.2s;
        text-align: center;
    }

    .nav-menu.open .mobile-country-selector {
        opacity: 1;
        transform: translateY(0);
    }

    .mobile-country-label {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        display: block;
    }

    .mobile-country-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        max-width: 300px;
    }

    .mobile-country-option {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 100px;
        padding: 0.5rem 0.75rem;
        color: white;
        text-decoration: none;
        font-size: 0.75rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .mobile-country-option:hover,
    .mobile-country-option.active {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
    }

    .mobile-country-option .country-flag {
        font-size: 0.9rem;
    }

    .close-menu {
        position: absolute;
        top: 0.75rem;
        right: 1.5rem;
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.1);
        border: none;
        border-radius: 50%;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .close-menu:hover {
        background: rgba(255,255,255,0.2);
        transform: scale(1.1);
    }

    @media (min-width: 1024px) {
        .nav {
            padding: 0 3rem;
        }

        .nav-toggle {
            display: none;
        }

        .nav-links {
            display: flex;
        }

        .country-selector {
            display: block;
        }
    }

    @media (min-width: 1440px) {
        .nav {
            padding: 0 5rem;
        }
    }

    @media (min-width: 1920px) {
        .nav {
            padding: 0 8rem;
            max-width: 2200px;
            margin: 0 auto;
            left: 50%;
            transform: translateX(-50%);
        }

        .nav.hidden {
            transform: translateX(-50%) translateY(-100%);
        }
    }
</style>

<script>
    function initNavbar() {
        // Cache DOM elements
        const nav = document.getElementById('nav');
        const menu = document.getElementById('navMenu');
        const navToggle = document.getElementById('navToggle');
        const closeMenu = document.getElementById('closeMenu');
        const countrySelector = document.getElementById('countrySelector');
        const countryBtn = document.getElementById('countryBtn');
        const menuLinks = document.querySelectorAll('.nav-menu > a');

        // Mobile menu toggle
        function toggleMenu() {
            menu?.classList.toggle('open');
            document.body.style.overflow = menu?.classList.contains('open') ? 'hidden' : '';
        }

        navToggle?.addEventListener('click', toggleMenu);
        closeMenu?.addEventListener('click', toggleMenu);
        menuLinks.forEach(link => link.addEventListener('click', toggleMenu));

        // Country selector toggle
        countryBtn?.addEventListener('click', (e) => {
            e.stopPropagation();
            countrySelector?.classList.toggle('open');
        });

        document.addEventListener('click', (e) => {
            if (!countrySelector?.contains(e.target as Node)) {
                countrySelector?.classList.remove('open');
            }
        });

        // Throttled scroll handler using requestAnimationFrame
        let lastScrollY = 0;
        let ticking = false;
        const scrollThreshold = 50;

        function updateNav() {
            const scrollY = window.scrollY;

            // Add scrolled class for background
            nav?.classList.toggle('scrolled', scrollY > 50);

            // Hide/show nav based on scroll direction
            if (scrollY > scrollThreshold) {
                nav?.classList.toggle('hidden', scrollY > lastScrollY);
            } else {
                nav?.classList.remove('hidden');
            }

            lastScrollY = scrollY;
            ticking = false;
        }

        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateNav);
                ticking = true;
            }
        }, { passive: true });
    }

    // Initialize on page load
    initNavbar();

    // Re-initialize after Astro page transitions
    document.addEventListener('astro:page-load', initNavbar);
</script>
