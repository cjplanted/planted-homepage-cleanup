---
import { locales, allLocales, defaultLocale, type LocaleCode } from '../i18n/config';
import { getTranslations } from '../i18n/index';

interface Props {
    currentPage?: string;
    locale?: LocaleCode;
}

const { currentPage = '', locale = defaultLocale } = Astro.props;
const base = import.meta.env.BASE_URL;
const t = getTranslations(locale);
const currentLocaleData = locales[locale];

// Build locale-aware URLs
const localePath = locale === defaultLocale ? '' : `/${locale}`;
---

<nav class="nav" id="nav" transition:persist>
