---
/**
 * Nearby Stores Component
 *
 * Fetches and displays real store/restaurant locations from the
 * Planted Availability Database API.
 */

import { fetchVenues, padToCountryName, type PadVenue } from '../data/padApi';

interface Props {
  country?: string;
  type?: 'retail' | 'restaurant' | 'all';
  limit?: number;
  title?: string;
  showMap?: boolean;
}

const {
  country = 'CH',
  type = 'all',
  limit = 12,
  title = 'Find Planted Near You',
  showMap = false
} = Astro.props;

// Fetch venues from PAD API
const venueType = type === 'all' ? undefined : (type === 'retail' ? 'retail' : 'restaurant');
const response = await fetchVenues({
  country,
  type: venueType,
  limit
});

const venues = response.venues;
const total = response.total;

// Group venues by city
const venuesByCity: Record<string, PadVenue[]> = {};
venues.forEach(venue => {
  const city = venue.address.city || 'Unknown';
  if (!venuesByCity[city]) venuesByCity[city] = [];
  venuesByCity[city].push(venue);
});

// Sort cities by venue count
const sortedCities = Object.entries(venuesByCity)
  .sort((a, b) => b[1].length - a[1].length);

// Country display name
const countryName = padToCountryName[country] || country;
---

<section class="nearby-stores">
  <div class="nearby-header">
    <h3>{title}</h3>
    <p class="venue-count">
      <strong>{total.toLocaleString()}</strong> locations in {countryName}
    </p>
  </div>

  {venues.length > 0 ? (
    <div class="venues-grid">
      {venues.map((venue) => (
        <div class="venue-card" data-type={venue.type}>
          <div class="venue-header">
            {venue.logo_url ? (
              <img
                src={venue.logo_url}
                alt={venue.name}
                class="venue-logo"
                loading="lazy"
              />
            ) : (
              <div class="venue-icon">
                {venue.type === 'restaurant' ? (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 8h1a4 4 0 0 1 0 8h-1"/>
                    <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"/>
                    <line x1="6" y1="1" x2="6" y2="4"/>
                    <line x1="10" y1="1" x2="10" y2="4"/>
                    <line x1="14" y1="1" x2="14" y2="4"/>
                  </svg>
                ) : (
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                    <polyline points="9 22 9 12 15 12 15 22"/>
                  </svg>
                )}
              </div>
            )}
            <div class="venue-info">
              <h4 class="venue-name">{venue.name}</h4>
              <p class="venue-address">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
                {venue.address.city}
                {venue.address.street && `, ${venue.address.street}`}
              </p>
            </div>
          </div>
          <div class="venue-meta">
            <span class={`venue-type type-${venue.type}`}>
              {venue.type === 'restaurant' ? 'Restaurant' : 'Store'}
            </span>
            {venue.chain_id && (
              <span class="venue-chain">{venue.chain_id}</span>
            )}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <p class="no-venues">No locations found in {countryName}.</p>
  )}

  {response.has_more && (
    <div class="view-more">
      <p class="more-text">
        Showing {venues.length} of {total.toLocaleString()} locations
      </p>
      <a href="https://locations.eatplanted.com" target="_blank" rel="noopener" class="view-all-btn">
        View All Locations
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/>
          <polyline points="15 3 21 3 21 9"/>
          <line x1="10" y1="14" x2="21" y2="3"/>
        </svg>
      </a>
    </div>
  )}
</section>

<style>
  .nearby-stores {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 1.5rem;
    padding: 2rem;
    margin-top: 2rem;
  }

  .nearby-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .nearby-header h3 {
    font-size: 1.5rem;
    color: white;
    margin-bottom: 0.5rem;
  }

  .venue-count {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.95rem;
  }

  .venue-count strong {
    color: var(--planted-green);
  }

  .venues-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  .venue-card {
    background: white;
    border-radius: 1rem;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .venue-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .venue-header {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .venue-logo {
    width: 48px;
    height: 48px;
    object-fit: contain;
    border-radius: 8px;
    background: #f5f5f5;
    padding: 4px;
  }

  .venue-icon {
    width: 48px;
    height: 48px;
    background: var(--planted-cream, #f5f2ed);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .venue-icon svg {
    width: 24px;
    height: 24px;
    color: var(--planted-purple, #6b3983);
  }

  .venue-info {
    flex: 1;
    min-width: 0;
  }

  .venue-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--planted-charcoal, #1a1a1a);
    margin: 0 0 0.25rem;
    line-height: 1.3;
  }

  .venue-address {
    display: flex;
    align-items: flex-start;
    gap: 0.35rem;
    font-size: 0.8rem;
    color: #666;
    margin: 0;
    line-height: 1.4;
  }

  .venue-address svg {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .venue-meta {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .venue-type {
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.2rem 0.6rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .type-restaurant {
    background: rgba(107, 57, 131, 0.1);
    color: var(--planted-purple, #6b3983);
  }

  .type-retail {
    background: rgba(139, 197, 63, 0.15);
    color: #5a8a2a;
  }

  .venue-chain {
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    border-radius: 100px;
    background: #f0f0f0;
    color: #666;
  }

  .no-venues {
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
    padding: 2rem;
  }

  .view-more {
    margin-top: 1.5rem;
    text-align: center;
  }

  .more-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.75rem 1.25rem;
    border-radius: 100px;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .view-all-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .view-all-btn svg {
    width: 16px;
    height: 16px;
  }

  @media (max-width: 640px) {
    .nearby-stores {
      padding: 1.5rem;
    }

    .venues-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
